<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ invitation.bride_name }} & {{ invitation.groom_name }} - Wedding Invitation</title>

    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@400;700&family=Crimson+Text:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>

        /* Cover Page Styles */
        .cover-page {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            text-align: center;
            color: white;
        }

        .cover-content {
            max-width: 400px;
            padding: 2rem;
        }

        .couple-initials {
            font-size: 4rem;
            font-family: 'Dancing Script', cursive;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        .couple-initials .fas {
            font-size: 2rem;
            animation: heartbeat 1.5s ease-in-out infinite;
        }

        @keyframes heartbeat {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.2); }
        }

        .couple-names {
            font-family: 'Dancing Script', cursive;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .wedding-date {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .open-invitation-btn {
            background: rgba(255,255,255,0.2);
            border: 2px solid white;
            color: white;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .open-invitation-btn:hover {
            background: white;
            color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        /* Countdown Styles */
        .countdown-section {
            background: rgba(255,255,255,0.1);
            padding: 4rem 0;
            text-align: center;
        }

        .countdown-timer {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
            margin-top: 2rem;
        }

        .countdown-item {
            text-align: center;
            background: rgba(255,255,255,0.2);
            padding: 2rem 1.5rem;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.3);
            min-width: 120px;
        }

        .countdown-number {
            display: block;
            font-size: 3rem;
            font-weight: 700;
            color: white;
            font-family: 'Dancing Script', cursive;
        }

        .countdown-label {
            font-size: 0.9rem;
            color: rgba(255,255,255,0.8);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 0.5rem;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Crimson Text', serif;
            background: linear-gradient(135deg, #f5f1eb 0%, #e8ddd4 100%);
            min-height: 100vh;
            color: #5d4e37;
        }

        .invitation-container {
            max-width: 400px;
            margin: 0 auto;
            background: #fefcf8;
            min-height: 100vh;
            position: relative;
        }

        .wood-texture {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 20"><rect width="100" height="20" fill="%23f5f1eb"/><line x1="0" y1="5" x2="100" y2="5" stroke="%23d4c4b0" stroke-width="0.5" opacity="0.3"/><line x1="0" y1="15" x2="100" y2="15" stroke="%23d4c4b0" stroke-width="0.5" opacity="0.3"/></svg>') repeat;
            opacity: 0.1;
            pointer-events: none;
        }

        .hero-section {
            height: 100vh;
            background: linear-gradient(rgba(139,111,71,0.1), rgba(139,111,71,0.2)), 
                        url('{{ url_for("static", filename="images/templates/rustic-bg.jpg") }}') center/cover;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            position: relative;
            padding: 30px;
        }

        .rustic-frame {
            position: absolute;
            top: 40px;
            left: 25px;
            right: 25px;
            bottom: 40px;
            border: 4px solid #8b6f47;
            border-radius: 8px;
            background: rgba(254,252,248,0.8);
            backdrop-filter: blur(5px);
        }

        .rustic-corners {
            position: absolute;
        }

        .corner-tl { top: -8px; left: -8px; width: 16px; height: 16px; background: #8b6f47; border-radius: 3px; }
        .corner-tr { top: -8px; right: -8px; width: 16px; height: 16px; background: #8b6f47; border-radius: 3px; }
        .corner-bl { bottom: -8px; left: -8px; width: 16px; height: 16px; background: #8b6f47; border-radius: 3px; }
        .corner-br { bottom: -8px; right: -8px; width: 16px; height: 16px; background: #8b6f47; border-radius: 3px; }

        .wedding-label {
            font-family: 'Amatic SC', cursive;
            font-size: 1.2rem;
            color: #8b6f47;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin-bottom: 20px;
            font-weight: 700;
        }

        .couple-names {
            font-family: 'Amatic SC', cursive;
            font-size: 4rem;
            font-weight: 700;
            color: #5d4e37;
            margin: 25px 0;
            line-height: 0.9;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }

        .ampersand {
            font-size: 3rem;
            color: #8b6f47;
        }

        .date-info {
            font-size: 1.1rem;
            color: #8b6f47;
            font-weight: 600;
            margin-top: 25px;
        }

        .content-section {
            padding: 45px 25px;
            background: #fefcf8;
            position: relative;
        }

        .section-header {
            text-align: center;
            margin-bottom: 35px;
            position: relative;
        }

        .section-title {
            font-family: 'Amatic SC', cursive;
            font-size: 2.5rem;
            color: #5d4e37;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .section-line {
            width: 80px;
            height: 3px;
            background: #8b6f47;
            margin: 0 auto;
        }

        .couple-info-cards {
            display: flex;
            flex-direction: column;
            gap: 25px;
            margin-bottom: 40px;
        }

        .info-card {
            background: linear-gradient(135deg, #f9f6f1 0%, #f5f1eb 100%);
            padding: 30px 25px;
            border-radius: 12px;
            text-align: center;
            border: 2px solid #e8ddd4;
            position: relative;
        }

        .info-card::before {
            content: '';
            position: absolute;
            top: 15px;
            left: 15px;
            width: 20px;
            height: 20px;
            background: linear-gradient(45deg, #8b6f47, #a0845c);
            border-radius: 2px;
            transform: rotate(45deg);
        }

        .person-name {
            font-family: 'Amatic SC', cursive;
            font-size: 2.2rem;
            color: #5d4e37;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .person-parents {
            font-size: 1.1rem;
            color: #8b6f47;
            line-height: 1.6;
            font-weight: 600;
        }

        .event-section {
            background: linear-gradient(135deg, #8b6f47 0%, #5d4e37 100%);
            color: #fefcf8;
            padding: 45px 25px;
            position: relative;
        }

        .event-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 8px;
            background: repeating-linear-gradient(90deg, #a0845c 0px, #a0845c 20px, #8b6f47 20px, #8b6f47 40px);
        }

        .event-details {
            background: rgba(254,252,248,0.95);
            color: #5d4e37;
            padding: 35px 25px;
            border-radius: 15px;
            text-align: center;
            margin-top: 25px;
            border: 3px solid rgba(160,132,92,0.3);
        }

        .event-time {
            font-family: 'Amatic SC', cursive;
            font-size: 1.8rem;
            color: #8b6f47;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .venue-name {
            font-family: 'Amatic SC', cursive;
            font-size: 2rem;
            color: #5d4e37;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .venue-address {
            color: #8b6f47;
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 25px;
            font-weight: 600;
        }

        .directions-btn {
            background: #8b6f47;
            color: #fefcf8;
            padding: 12px 28px;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            border: 2px solid #8b6f47;
        }

        .directions-btn:hover {
            background: transparent;
            color: #8b6f47;
            transform: translateY(-2px);
        }

        .rsvp-section {
            padding: 45px 25px;
            background: #f9f6f1;
            position: relative;
        }

        .rsvp-form {
            max-width: 350px;
            margin: 0 auto;
        }

        .form-row {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-family: 'Amatic SC', cursive;
            font-size: 1.3rem;
            color: #5d4e37;
            margin-bottom: 6px;
            font-weight: 700;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e8ddd4;
            border-radius: 6px;
            font-size: 1rem;
            font-family: 'Crimson Text', serif;
            color: #5d4e37;
            background: #fefcf8;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: #8b6f47;
        }

        .submit-button {
            background: linear-gradient(135deg, #8b6f47 0%, #5d4e37 100%);
            color: #fefcf8;
            padding: 15px 35px;
            border: none;
            border-radius: 6px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            width: 100%;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-family: 'Amatic SC', cursive;
        }

        .submit-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(93,78,55,0.3);
        }

        .gift-section {
            padding: 45px 25px;
            background: #fefcf8;
            text-align: center;
        }

        .gift-message {
            color: #8b6f47;
            font-size: 1.1rem;
            line-height: 1.7;
            margin-bottom: 30px;
            font-weight: 600;
        }

        .gift-options {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .gift-option {
            background: #f9f6f1;
            padding: 25px 20px;
            border-radius: 12px;
            border: 2px solid #e8ddd4;
            position: relative;
        }

        .gift-option::before {
            content: '';
            position: absolute;
            top: -3px;
            left: 20px;
            right: 20px;
            height: 6px;
            background: repeating-linear-gradient(90deg, #8b6f47 0px, #8b6f47 10px, transparent 10px, transparent 20px);
        }

        .gift-option h4 {
            font-family: 'Amatic SC', cursive;
            color: #5d4e37;
            margin-bottom: 12px;
            font-size: 1.5rem;
            font-weight: 700;
        }

        .account-info {
            font-size: 1.2rem;
            font-weight: 600;
            color: #8b6f47;
            background: #fefcf8;
            padding: 10px 12px;
            border-radius: 4px;
            margin: 10px 0;
            border: 1px solid #e8ddd4;
        }

        .qr-code {
            width: 150px;
            height: 150px;
            margin: 15px auto;
            border: 3px solid #8b6f47;
            border-radius: 8px;
        }

        @media (min-width: 768px) {
            .invitation-container {
                max-width: 480px;
                margin: 20px auto;
                border-radius: 15px;
                box-shadow: 0 10px 40px rgba(0,0,0,0.15);
            }

            .couple-info-cards {
                flex-direction: row;
                gap: 20px;
            }

            .info-card {
                flex: 1;
            }

            .gift-options {
                flex-direction: row;
            }

            .gift-option {
                flex: 1;
            }
        }

        .rustic-fade {
            opacity: 0;
            transform: translateY(25px);
            transition: all 0.6s ease;
        }

        .rustic-fade.show {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</head>
<body>

    <!-- Cover Page -->
    <div id="coverPage" class="cover-page">
        <div class="cover-content">
            <div class="couple-initials">
                <span>{{ invitation.bride_name[0] if invitation.bride_name else 'B' }}</span>
                <i class="fas fa-heart"></i>
                <span>{{ invitation.groom_name[0] if invitation.groom_name else 'G' }}</span>
            </div>
            <h1 class="couple-names">{{ invitation.couple_name }}</h1>
            <p class="wedding-date">
                {% if invitation.wedding_date %}
                    {{ invitation.wedding_date.strftime('%d %B %Y') if invitation.wedding_date.__class__.__name__ == 'datetime' else invitation.wedding_date }}
                {% else %}
                    Segera
                {% endif %}
            </p>
            <button class="open-invitation-btn" onclick="openInvitation()">
                <i class="fas fa-envelope-open me-2"></i>Buka Undangan
            </button>
        </div>
    </div>

    <div class="container" id="mainContent" style="display: none;"><div class="invitation-container">
        <div class="wood-texture"></div>

        <!-- Hero Section -->
        <section class="hero-section">
            <div class="rustic-frame">
                <div class="rustic-corners corner-tl"></div>
                <div class="rustic-corners corner-tr"></div>
                <div class="rustic-corners corner-bl"></div>
                <div class="rustic-corners corner-br"></div>
            </div>
            <div class="wedding-label rustic-fade">Wedding Invitation</div>
            <h1 class="couple-names rustic-fade">
                {{ invitation.bride_name }}<br>
                <span class="ampersand">&</span><br>
                {{ invitation.groom_name }}
            </h1>
            <div class="date-info rustic-fade">{{ invitation.wedding_date.strftime('%d %B %Y') if invitation.wedding_date else '20 Agustus 2025' }}</div>
        </section>

        <!-- Couple Information -->
        <section class="content-section rustic-fade">
            <div class="section-header">
                <h2 class="section-title">Our Story</h2>
                <div class="section-line"></div>
            </div>

            <div class="couple-info-cards">
                <div class="info-card">
                    <div class="person-name">{{ invitation.bride_name }}</div>
                    <div class="person-parents">
                        Putri dari<br>
                        {{ invitation.bride_father }}<br>
                        & {{ invitation.bride_mother }}
                    </div>
                </div>

                <div class="info-card">
                    <div class="person-name">{{ invitation.groom_name }}</div>
                    <div class="person-parents">
                        Putra dari<br>
                        {{ invitation.groom_father }}<br>
                        & {{ invitation.groom_mother }}
                    </div>
                </div>
            </div>
        </section>

        <!-- Event Details -->
        <section class="event-section rustic-fade">
            <div class="section-header">
                <h2 class="section-title" style="color: #fefcf8;">Wedding Details</h2>
                <div class="section-line" style="background: #fefcf8;"></div>
            </div>

            <div class="event-details">
                <div class="event-time">{{ invitation.wedding_time or '11:00' }} - Selesai</div>
                <div class="venue-name">{{ invitation.venue_name or 'Rustic Garden Venue' }}</div>
                <div class="venue-address">{{ invitation.venue_address }}</div>
                {% if invitation.venue_address.startswith('http') %}
                        <a href="{{ invitation.venue_address }}" target="_blank" class="maps-btn">
                            <i class="fas fa-map-marked-alt me-2"></i>View on Maps
                        </a>
                    {% else %}
                        <a href="https://maps.google.com/?q={{ invitation.venue_address }}" target="_blank" class="maps-btn">
                            <i class="fas fa-map-marked-alt me-2"></i>View on Maps
                        </a>
                    {% endif %}
                    <i class="fas fa-map-marker-alt"></i> Get Directions
                </a>
            </div>
        </section>

        
        
        <!-- Countdown Section -->
        <section class="countdown-section" style="background: rgba(255,255,255,0.1); padding: 4rem 0; text-align: center;">
            <div class="container">
                <h2 class="section-title" style="color: white; font-family: 'Dancing Script', cursive; font-size: 2.5rem; margin-bottom: 2rem;">Menuju Hari Bahagia</h2>
                {% if invitation.wedding_date %}
                <div class="countdown-timer" id="countdownTimer" style="display: flex; justify-content: center; gap: 1.5rem; flex-wrap: wrap; margin-top: 2rem;">
                    <div class="countdown-item" style="text-align: center; background: rgba(255,255,255,0.2); padding: 2rem 1.5rem; border-radius: 15px; backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.3); min-width: 100px;">
                        <span class="countdown-number" id="weeks" style="display: block; font-size: 3rem; font-weight: 700; color: white; font-family: 'Dancing Script', cursive;">00</span>
                        <span class="countdown-label" style="font-size: 0.9rem; color: rgba(255,255,255,0.8); text-transform: uppercase; letter-spacing: 1px; margin-top: 0.5rem;">Minggu</span>
                    </div>
                    <div class="countdown-item" style="text-align: center; background: rgba(255,255,255,0.2); padding: 2rem 1.5rem; border-radius: 15px; backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.3); min-width: 100px;">
                        <span class="countdown-number" id="days" style="display: block; font-size: 3rem; font-weight: 700; color: white; font-family: 'Dancing Script', cursive;">00</span>
                        <span class="countdown-label" style="font-size: 0.9rem; color: rgba(255,255,255,0.8); text-transform: uppercase; letter-spacing: 1px; margin-top: 0.5rem;">Hari</span>
                    </div>
                    <div class="countdown-item" style="text-align: center; background: rgba(255,255,255,0.2); padding: 2rem 1.5rem; border-radius: 15px; backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.3); min-width: 100px;">
                        <span class="countdown-number" id="hours" style="display: block; font-size: 3rem; font-weight: 700; color: white; font-family: 'Dancing Script', cursive;">00</span>
                        <span class="countdown-label" style="font-size: 0.9rem; color: rgba(255,255,255,0.8); text-transform: uppercase; letter-spacing: 1px; margin-top: 0.5rem;">Jam</span>
                    </div>
                    <div class="countdown-item" style="text-align: center; background: rgba(255,255,255,0.2); padding: 2rem 1.5rem; border-radius: 15px; backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.3); min-width: 100px;">
                        <span class="countdown-number" id="minutes" style="display: block; font-size: 3rem; font-weight: 700; color: white; font-family: 'Dancing Script', cursive;">00</span>
                        <span class="countdown-label" style="font-size: 0.9rem; color: rgba(255,255,255,0.8); text-transform: uppercase; letter-spacing: 1px; margin-top: 0.5rem;">Menit</span>
                    </div>
                </div>
                {% endif %}
            </div>
        </section>





        <!-- RSVP Section -->
        <section class="rsvp-section rustic-fade">
            <div class="section-header">
                <h2 class="section-title">Please RSVP</h2>
                <div class="section-line"></div>
            </div>

            <form class="rsvp-form" method="POST" action="{{ url_for('rsvp_wedding', invitation_id=invitation.id) }}">
                <div class="form-row">
                    <label class="form-label">Full Name</label>
                    <input type="text" name="name" class="form-control" required>
                </div>

                <div class="form-row">
                    <label class="form-label">WhatsApp Number</label>
                    <input type="text" name="phone" class="form-control">
                </div>

                <div class="form-row">
                    <label class="form-label">Attendance</label>
                    <select name="attendance" class="form-control" required>
                        <option value="">Will you attend?</option>
                        <option value="hadir">Yes, I'll be there</option>
                        <option value="tidak_hadir">Sorry, can't make it</option>
                    </select>
                </div>

                <div class="form-row">
                    <label class="form-label">Number of Guests</label>
                    <select name="guest_count" class="form-control">
                        <option value="1">1 Person</option>
                        <option value="2">2 People</option>
                    </select>
                </div>

                <div class="form-row">
                    <label class="form-label">Message & Wishes</label>
                    <textarea name="wishes" class="form-control" rows="3" placeholder="Share your wishes for us..."></textarea>
                </div>

                <button type="submit" class="submit-button">Send RSVP</button>
            </form>
        </section>

        <!-- Gift Section -->
        <section class="gift-section rustic-fade">
            <div class="section-header">
                <h2 class="section-title">Wedding Gift</h2>
                <div class="section-line"></div>
            </div>

            <div class="gift-message">
                <p>Your presence at our wedding is the greatest gift of all.<br>However, if you wish to honor us with a gift:</p>
            </div>

            <div class="gift-options">
                {% if invitation.bank_name and invitation.bank_account %}
                <div class="gift-option">
                    <h4><i class="fas fa-university"></i> {{ invitation.bank_name }}</h4>
                    <div class="account-info">{{ invitation.bank_account }}</div>
                    <p style="color: #8b6f47;">a.n. {{ invitation.account_holder or invitation.bride_name }}</p>
                </div>
                {% endif %}

                {% if invitation.qris_code %}
                <div class="gift-option">
                    <h4><i class="fas fa-qrcode"></i> Digital Payment</h4>
                    <img src="data:image/png;base64,{{ invitation.qris_code }}" class="qr-code" alt="QRIS Code">
                </div>
                {% endif %}
            </div>
        </section>
    </div>

    <script>
        // Intersection Observer for scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -30px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('show');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.rustic-fade').forEach(el => {
            observer.observe(el);
        });

        // Music functionality
        const audio = document.getElementById('backgroundMusic');
        let isPlaying = false;
        
        if (audio) {
            audio.volume = 0.3;
            
            // Try autoplay on load
            audio.play().then(() => {
                isPlaying = true;
                console.log('Music autoplaying');
            }).catch(() => {
                console.log('Autoplay blocked, waiting for user interaction');
            });

            // Auto-play attempt after any user interaction
            const startMusic = () => {
                if (!isPlaying && audio.src) {
                    audio.play().then(() => {
                        isPlaying = true;
                        console.log('Music started after user interaction');
                    }).catch(console.error);
                }
            };

            // Try on multiple interaction types
            document.addEventListener('click', startMusic, { once: true });
            document.addEventListener('touchstart', startMusic, { once: true });
            document.addEventListener('scroll', startMusic, { once: true });

            // Handle audio events
            audio.addEventListener('play', () => {
                isPlaying = true;
            });

            audio.addEventListener('pause', () => {
                isPlaying = false;
            });

            audio.addEventListener('loadeddata', function() {
                console.log('Audio loaded successfully');
                if (!isPlaying) {
                    audio.play().catch(() => {});
                }
            });
        }
    </script>

