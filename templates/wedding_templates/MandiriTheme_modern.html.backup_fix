<script>
// Gallery Photo Sorting and Animation
document.addEventListener('DOMContentLoaded', function() {
    initializeGallerySorting();
    initializeGalleryAnimations();
});

function initializeGallerySorting() {
    // Sort photos by aspect ratio (portrait vs landscape)
    const galleryItems = document.querySelectorAll('.gallery-item');
    const portraitContainer = document.querySelector('.gallery-portrait-grid');
    const landscapeContainer = document.querySelector('.gallery-landscape-grid');
    
    if (!portraitContainer || !landscapeContainer) return;
    
    galleryItems.forEach(function(item) {
        const img = item.querySelector('img');
        if (!img) return;
        
        img.onload = function() {
            const aspectRatio = this.naturalWidth / this.naturalHeight;
            
            // Clone the item for new containers
            const newItem = item.cloneNode(true);
            
            if (aspectRatio < 1) {
                // Portrait
                newItem.className = 'gallery-portrait-item gallery-fade-in';
                portraitContainer.appendChild(newItem);
            } else {
                // Landscape or square
                newItem.className = 'gallery-landscape-item gallery-fade-in';
                landscapeContainer.appendChild(newItem);
            }
            
            // Remove original item
            item.remove();
        };
        
        // If image is already loaded
        if (img.complete) {
            img.onload();
        }
    });
}

function initializeGalleryAnimations() {
    // Setup intersection observer for animations
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
            }
        });
    }, observerOptions);

    // Observe gallery items with delay
    setTimeout(() => {
        document.querySelectorAll('.gallery-fade-in').forEach((el, index) => {
            el.style.animationDelay = `${index * 0.1}s`;
            observer.observe(el);
        });
    }, 500);
}

// Mobile viewport height fix
function setViewportHeight() {
    document.documentElement.style.setProperty('--vh', window.innerHeight * 0.01 + 'px');
}

setViewportHeight();
window.addEventListener('resize', setViewportHeight);
window.addEventListener('orientationchange', () => {
    setTimeout(setViewportHeight, 500);
});
</script>


<script>
// Enhanced Wedding Template Interactions
document.addEventListener('DOMContentLoaded', function() {
    console.log('Enhanced template script loaded');
    
    // Auto-scroll functionality
    let autoScrollTimer;
    let isUserInteracting = false;
    let currentSection = 0;
    
    // Get all sections for auto-scroll
    const sections = document.querySelectorAll('section, .section, .venue-section, .gallery-section');
    
    // Intersection Observer for section animations
    const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.1
    };
    
    const sectionObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
            }
        });
    }, observerOptions);
    
    // Observe all sections
    sections.forEach(section => {
        sectionObserver.observe(section);
    });
    
    // Auto-scroll function
    function startAutoScroll() {
        if (isUserInteracting || sections.length === 0) return;
        
        autoScrollTimer = setInterval(() => {
            if (!isUserInteracting) {
                currentSection = (currentSection + 1) % sections.length;
                sections[currentSection].scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'center' 
                });
            }
        }, 5000); // Scroll every 5 seconds
    }
    
    function stopAutoScroll() {
        if (autoScrollTimer) {
            clearInterval(autoScrollTimer);
            autoScrollTimer = null;
        }
    }
    
    // User interaction detection
    const userInteractionEvents = ['mousedown', 'mousemove', 'keydown', 'scroll', 'touchstart', 'click'];
    
    userInteractionEvents.forEach(event => {
        document.addEventListener(event, () => {
            isUserInteracting = true;
            stopAutoScroll();
            
            // Reset auto-scroll after 10 seconds of inactivity
            clearTimeout(window.inactivityTimer);
            window.inactivityTimer = setTimeout(() => {
                isUserInteracting = false;
                startAutoScroll();
            }, 10000);
        }, { passive: true });
    });
    
    // Start auto-scroll after 3 seconds
    setTimeout(() => {
        if (!isUserInteracting) {
            startAutoScroll();
        }
    }, 3000);
    
    // Scroll indicator
    const scrollIndicator = document.createElement('div');
    scrollIndicator.className = 'scroll-indicator';
    scrollIndicator.innerHTML = '<div class="scroll-arrow">‚Üì</div>';
    document.body.appendChild(scrollIndicator);
    
    // Show/hide scroll indicator
    window.addEventListener('scroll', () => {
        const scrollY = window.scrollY;
        const windowHeight = window.innerHeight;
        const documentHeight = document.documentElement.scrollHeight;
        
        if (scrollY < documentHeight - windowHeight - 100) {
            scrollIndicator.classList.add('visible');
        } else {
            scrollIndicator.classList.remove('visible');
        }
    });
    
    // Scroll indicator click
    scrollIndicator.addEventListener('click', () => {
        const nextSection = sections[Math.min(currentSection + 1, sections.length - 1)];
        if (nextSection) {
            nextSection.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
    });
    
    // Enhanced gallery interactions
    const galleryItems = document.querySelectorAll('.gallery-item');
    galleryItems.forEach((item, index) => {
        // Add staggered animation delay
        item.style.animationDelay = (index * 0.1) + 's';
        
        // Add hover effects
        item.addEventListener('mouseenter', () => {
            stopAutoScroll();
            isUserInteracting = true;
        });
        
        item.addEventListener('mouseleave', () => {
            // Reset interaction timer
            clearTimeout(window.inactivityTimer);
            window.inactivityTimer = setTimeout(() => {
                isUserInteracting = false;
                startAutoScroll();
            }, 5000);
        });
    });
    
    // Address button enhancements
    const addressButtons = document.querySelectorAll('.address-button');
    addressButtons.forEach(button => {
        button.addEventListener('click', (e) => {
            // Add click animation
            button.style.transform = 'scale(0.95)';
            setTimeout(() => {
                button.style.transform = '';
            }, 150);
        });
    });
    
    // Mobile touch optimizations
    if ('ontouchstart' in window) {
        document.body.classList.add('touch-device');
        
        // Adjust auto-scroll timing for mobile
        const style = document.createElement('style');
        style.textContent = `
            .scroll-indicator { bottom: 80px; }
            .gallery-item { margin-bottom: 10px; }
        `;
        document.head.appendChild(style);
    }
});
</script>
