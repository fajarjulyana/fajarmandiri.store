    padding: 0 20px;
}

.gallery-header {
    text-align: center;
    margin-bottom: 40px;
}

.gallery-title {
    font-size: 2.2rem;
    margin-bottom: 15px;
    color: #333;
    font-weight: 600;
}

/* Portrait Photos Section */
.gallery-portrait-section {
    margin-bottom: 50px;
}

.gallery-portrait-title {
    font-size: 1.5rem;
    text-align: center;
    margin-bottom: 25px;
    color: #555;
    font-weight: 500;
}

.gallery-portrait-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    justify-items: center;
}

/* Landscape Photos Section */
.gallery-landscape-section {
    margin-bottom: 30px;
}

.gallery-landscape-title {
    font-size: 1.5rem;
    text-align: center;
    margin-bottom: 25px;
    color: #555;
    font-weight: 500;
}

.gallery-landscape-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 20px;
    justify-items: center;
}

/* Portrait Item Styling */
.gallery-portrait-item {
    position: relative;
    width: 250px;
    height: 350px;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: #f8f9fa;
}

.gallery-portrait-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.2);
}

.gallery-portrait-item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    background: #fff;
    transition: transform 0.3s ease;
}

.gallery-portrait-item:hover img {
    transform: scale(1.02);
}

/* Landscape Item Styling */
.gallery-landscape-item {
    position: relative;
    width: 350px;
    height: 250px;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: #f8f9fa;
}

.gallery-landscape-item:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.2);
}

.gallery-landscape-item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    background: #fff;
    transition: transform 0.3s ease;
}

.gallery-landscape-item:hover img {
    transform: scale(1.02);
}

/* Animation */
.gallery-fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
}

.gallery-fade-in.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Desktop Optimizations */
@media (min-width: 1200px) {
    .gallery-portrait-grid {
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
    }
    
    .gallery-landscape-grid {
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 25px;
    }
    
    .gallery-portrait-item {
        width: 280px;
        height: 380px;
    }
    
    .gallery-landscape-item {
        width: 400px;
        height: 280px;
    }
    
    .gallery-container {
        padding: 0 40px;
    }
}

@media (min-width: 992px) and (max-width: 1199px) {
    .gallery-portrait-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }
    
    .gallery-landscape-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }
}

@media (min-width: 768px) and (max-width: 991px) {
    .gallery-portrait-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 18px;
    }
    
    .gallery-landscape-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 18px;
    }
    
    .gallery-portrait-item {
        width: 220px;
        height: 300px;
    }
    
    .gallery-landscape-item {
        width: 300px;
        height: 220px;
    }
    
    .gallery-section {
        padding: 50px 0;
    }
}

/* Mobile Optimizations */
@media (max-width: 767px) {
    .gallery-section {
        padding: 40px 0;
    }
    
    .gallery-container {
        padding: 0 15px;
    }
    
    .gallery-portrait-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }
    
    .gallery-landscape-grid {
        grid-template-columns: 1fr;
        gap: 15px;
    }
    
    .gallery-portrait-item {
        width: 160px;
        height: 220px;
        border-radius: 12px;
    }
    
    .gallery-landscape-item {
        width: 280px;
        height: 200px;
        border-radius: 12px;
    }
    
    .gallery-title {
        font-size: 1.8rem;
    }
    
    .gallery-portrait-title,
    .gallery-landscape-title {
        font-size: 1.2rem;
    }
}

@media (max-width: 480px) {
    .gallery-portrait-grid {
        grid-template-columns: 1fr 1fr;
        gap: 12px;
    }
    
    .gallery-landscape-grid {
        grid-template-columns: 1fr;
        gap: 12px;
    }
    
    .gallery-portrait-item {
        width: 140px;
        height: 200px;
        border-radius: 10px;
    }
    
    .gallery-landscape-item {
        width: 260px;
        height: 180px;
        border-radius: 10px;
    }
    
    .gallery-title {
        font-size: 1.6rem;
    }
    
    .gallery-section {
        padding: 30px 0;
    }
}

/* Ultra small screens */
@media (max-width: 360px) {
    .gallery-container {
        padding: 0 10px;
    }
    
    .gallery-portrait-item {
        width: 120px;
        height: 180px;
        border-radius: 8px;
    }
    
    .gallery-landscape-item {
        width: 240px;
        height: 160px;
        border-radius: 8px;
    }
}

/* Loading State */
.gallery-loading {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 200px;
}

.gallery-spinner {
    width: 40px;
    height: 40px;
    border: 4px solid #f3f3f3;
    border-top: 4px solid #007bff;
    border-radius: 50%;
    animation: gallery-spin 1s linear infinite;
}

@keyframes gallery-spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}


/* Gallery Photo Display Fix */
.gallery-section {
    display: block !important;
    visibility: visible !important;
