<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ invitation.couple_name }} - Royal Wedding</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700&family=Cormorant+Garamond:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>

        /* Cover Page Styles */
        .cover-page {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            text-align: center;
            color: white;
        }

        .cover-content {
            max-width: 400px;
            padding: 2rem;
        }

        .couple-initials {
            font-size: 4rem;
            font-family: 'Dancing Script', cursive;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        .couple-initials .fas {
            font-size: 2rem;
            animation: heartbeat 1.5s ease-in-out infinite;
        }

        @keyframes heartbeat {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.2); }
        }

        .couple-names {
            font-family: 'Dancing Script', cursive;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .wedding-date {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .open-invitation-btn {
            background: rgba(255,255,255,0.2);
            border: 2px solid white;
            color: white;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .open-invitation-btn:hover {
            background: white;
            color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        /* Countdown Styles */
        .countdown-section {
            background: rgba(255,255,255,0.1);
            padding: 4rem 0;
            text-align: center;
        }

        .countdown-timer {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
            margin-top: 2rem;
        }

        .countdown-item {
            text-align: center;
            background: rgba(255,255,255,0.2);
            padding: 2rem 1.5rem;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.3);
            min-width: 120px;
        }

        .countdown-number {
            display: block;
            font-size: 3rem;
            font-weight: 700;
            color: white;
            font-family: 'Dancing Script', cursive;
        }

        .countdown-label {
            font-size: 0.9rem;
            color: rgba(255,255,255,0.8);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 0.5rem;
        }

        :root {
            --burgundy: #800020;
            --dark-burgundy: #5D0011;
            --light-burgundy: #A0233E;
            --gold: #FFD700;
            --dark-gold: #DAA520;
            --cream: #FFF8DC;
            --ivory: #FFFFF0;
            --dark: #2C1810;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Cormorant Garamond', serif;
            background: linear-gradient(135deg, var(--burgundy) 0%, var(--dark-burgundy) 100%);
            color: var(--ivory);
            overflow-x: hidden;
        }

        .royal-font {
            font-family: 'Cinzel', serif;
        }

        /* Animated Background */
        .royal-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: 
                radial-gradient(circle at 20% 20%, rgba(255, 215, 0, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(255, 215, 0, 0.08) 0%, transparent 50%),
                radial-gradient(circle at 40% 60%, rgba(255, 215, 0, 0.05) 0%, transparent 50%),
                linear-gradient(135deg, var(--burgundy) 0%, var(--dark-burgundy) 100%);
        }

        .royal-pattern {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><defs><pattern id="royal" x="0" y="0" width="50" height="50" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="2" fill="%23FFD700" opacity="0.3"/><path d="M25,15 L30,20 L25,25 L20,20 Z" fill="%23FFD700" opacity="0.2"/></pattern></defs><rect width="100" height="100" fill="url(%23royal)"/></svg>');
            opacity: 0.3;
            animation: patternMove 30s linear infinite;
        }

        @keyframes patternMove {
            0% { transform: translateX(0) translateY(0); }
            100% { transform: translateX(50px) translateY(50px); }
        }

        /* Hero Section */
        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            text-align: center;
        }

        .royal-crown {
            font-size: 4rem;
            color: var(--gold);
            margin-bottom: 30px;
            animation: crownGlow 3s ease-in-out infinite alternate;
        }

        @keyframes crownGlow {
            from { 
                text-shadow: 0 0 20px var(--gold), 0 0 30px var(--gold), 0 0 40px var(--gold);
                transform: scale(1);
            }
            to { 
                text-shadow: 0 0 30px var(--gold), 0 0 40px var(--gold), 0 0 50px var(--gold);
                transform: scale(1.05);
            }
        }

        .hero-title {
            font-size: 2rem;
            color: var(--gold);
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 3px;
            opacity: 0;
            animation: royalFadeIn 1.5s ease-out 0.5s forwards;
        }

        .hero-names {
            font-size: 5rem;
            font-weight: 600;
            color: var(--ivory);
            margin: 40px 0;
            text-shadow: 3px 3px 6px rgba(0,0,0,0.5);
            position: relative;
            opacity: 0;
            animation: royalFadeIn 1.5s ease-out 1s forwards;
        }

        .hero-names::before,
        .hero-names::after {
            content: 'â™”';
            position: absolute;
            font-size: 3rem;
            color: var(--gold);
            top: 50%;
            transform: translateY(-50%);
            text-shadow: 0 0 20px var(--gold);
        }

        .hero-names::before {
            left: -80px;
        }

        .hero-names::after {
            right: -80px;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            color: var(--cream);
            margin-bottom: 30px;
            font-style: italic;
            opacity: 0;
            animation: royalFadeIn 1.5s ease-out 1.5s forwards;
        }

        .hero-date {
            font-size: 1.8rem;
            color: var(--gold);
            font-weight: 500;
            opacity: 0;
            animation: royalFadeIn 1.5s ease-out 2s forwards;
        }

        @keyframes royalFadeIn {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Royal Divider */
        .royal-divider {
            text-align: center;
            margin: 80px 0;
        }

        .divider-content {
            display: inline-flex;
            align-items: center;
            color: var(--gold);
            font-size: 2rem;
        }

        .divider-line {
            width: 150px;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--gold), transparent);
            margin: 0 20px;
        }

        /* Content Sections */
        .content-section {
            background: rgba(255, 255, 255, 0.95);
            color: var(--dark);
            margin: 100px 0;
            border-radius: 30px;
            box-shadow: 0 30px 60px rgba(0,0,0,0.3);
            backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
        }

        .content-section::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, var(--gold), var(--burgundy), var(--gold));
            border-radius: 32px;
            z-index: -1;
        }

        .section-header {
            text-align: center;
            padding: 60px 40px 40px;
            background: linear-gradient(135deg, var(--ivory) 0%, var(--cream) 100%);
            border-radius: 30px 30px 0 0;
        }

        .section-title {
            font-size: 3rem;
            color: var(--burgundy);
            margin-bottom: 20px;
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: var(--gold);
        }

        .section-subtitle {
            font-size: 1.2rem;
            color: var(--burgundy);
            font-style: italic;
        }

        /* Couple Cards */
        .couple-container {
            padding: 60px 40px;
        }

        .couple-card {
            background: linear-gradient(135deg, var(--ivory) 0%, var(--cream) 100%);
            border-radius: 25px;
            padding: 50px 40px;
            text-align: center;
            position: relative;
            box-shadow: 0 20px 40px rgba(128, 0, 32, 0.2);
            border: 3px solid var(--gold);
        }

        .couple-card::before {
            content: '';
            position: absolute;
            top: -5px;
            left: -5px;
            right: -5px;
            bottom: -5px;
            background: linear-gradient(45deg, var(--gold), var(--burgundy), var(--gold), var(--burgundy));
            border-radius: 30px;
            z-index: -1;
            animation: borderRotate 4s linear infinite;
        }

        @keyframes borderRotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .royal-avatar {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--burgundy), var(--dark-burgundy));
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            font-size: 4rem;
            color: var(--gold);
            border: 5px solid var(--gold);
            box-shadow: 0 0 30px rgba(255, 215, 0, 0.5);
        }

        .couple-name {
            font-size: 2.5rem;
            font-weight: 600;
            color: var(--burgundy);
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .couple-title {
            color: var(--gold);
            font-weight: 600;
            font-size: 1.2rem;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .couple-parents {
            color: var(--dark);
            line-height: 1.8;
            font-size: 1.1rem;
        }

        /* Event Details */
        .event-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            padding: 60px 40px;
        }

        .event-card {
            background: linear-gradient(135deg, var(--burgundy), var(--dark-burgundy));
            border-radius: 20px;
            padding: 40px 30px;
            text-align: center;
            color: var(--ivory);
            position: relative;
            overflow: hidden;
            border: 3px solid var(--gold);
            transition: transform 0.3s ease;
        }

        .event-card:hover {
            transform: translateY(-10px);
        }

        .event-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 215, 0, 0.1), transparent);
            animation: eventShimmer 3s ease-in-out infinite;
        }

        @keyframes eventShimmer {
            0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
            100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
        }

        .event-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: var(--gold);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            color: var(--burgundy);
            font-size: 2rem;
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
        }

        .event-title {
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--gold);
        }

        .event-info {
            font-size: 1.1rem;
            line-height: 1.6;
        }

        /* RSVP Section */
        .rsvp-form {
            padding: 60px;
            background: linear-gradient(135deg, var(--ivory) 0%, var(--cream) 100%);
            border-radius: 25px;
            margin: 40px;
            border: 3px solid var(--gold);
            box-shadow: inset 0 0 30px rgba(128, 0, 32, 0.1);
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 600;
            color: var(--burgundy);
            margin-bottom: 8px;
            display: block;
            font-size: 1.1rem;
        }

        .form-control {
            width: 100%;
            padding: 15px 20px;
            border: 2px solid var(--gold);
            border-radius: 15px;
            font-size: 1rem;
            background: var(--ivory);
            color: var(--dark);
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--burgundy);
            box-shadow: 0 0 15px rgba(128, 0, 32, 0.3);
        }

        .btn-royal {
            background: linear-gradient(135deg, var(--burgundy), var(--dark-burgundy));
            border: 3px solid var(--gold);
            color: var(--ivory);
            padding: 15px 50px;
            border-radius: 50px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 2px;
            transition: all 0.3s ease;
            width: 100%;
            font-size: 1.1rem;
        }

        .btn-royal:hover {
            background: linear-gradient(135deg, var(--light-burgundy), var(--burgundy));
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(128, 0, 32, 0.4);
            color: var(--ivory);
        }

        /* Footer */
        .royal-footer {
            text-align: center;
            padding: 80px 40px;
            background: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            margin-top: 100px;
        }

        .footer-message {
            font-size: 1.5rem;
            line-height: 1.8;
            color: var(--cream);
            max-width: 800px;
            margin: 0 auto 40px;
            font-style: italic;
        }

        .footer-names {
            font-size: 2.5rem;
            font-weight: 600;
            color: var(--gold);
            text-shadow: 0 0 20px var(--gold);
        }

        .footer-ornament {
            font-size: 3rem;
            color: var(--gold);
            margin: 30px 0;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hero-names {
                font-size: 3rem;
            }

            .hero-names::before,
            .hero-names::after {
                display: none;
            }

            .section-title {
                font-size: 2rem;
            }

            .content-section {
                margin: 50px 20px;
            }

            .rsvp-form {
                padding: 40px 30px;
                margin: 20px;
            }
        }

        /* Music Control */
        .music-control {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 1000;
            background: linear-gradient(135deg, var(--burgundy), var(--dark-burgundy));
            color: var(--gold);
            border: 3px solid var(--gold);
            border-radius: 50%;
            width: 70px;
            height: 70px;
            font-size: 1.5rem;
            cursor: pointer;
            box-shadow: 0 5px 20px rgba(255, 215, 0, 0.4);
            transition: all 0.3s ease;
        }

        .music-control:hover {
            transform: scale(1.1);
            box-shadow: 0 8px 25px rgba(255, 215, 0, 0.6);
        }
    </style>
</head>
<body>

    <!-- Cover Page -->
    <div id="coverPage" class="cover-page">
        <div class="cover-content">
            <div class="couple-initials">
                <span>{{ invitation.bride_name[0] if invitation.bride_name else 'B' }}</span>
                <i class="fas fa-heart"></i>
                <span>{{ invitation.groom_name[0] if invitation.groom_name else 'G' }}</span>
            </div>
            <h1 class="couple-names">{{ invitation.couple_name }}</h1>
            <p class="wedding-date">
                {% if invitation.wedding_date %}
                    {{ invitation.wedding_date.strftime('%d %B %Y') if invitation.wedding_date.__class__.__name__ == 'datetime' else invitation.wedding_date }}
                {% else %}
                    Segera
                {% endif %}
            </p>
            <button class="open-invitation-btn" onclick="openInvitation()">
                <i class="fas fa-envelope-open me-2"></i>Buka Undangan
            </button>
        </div>
    </div>

    <div class="royal-bg">
        <div class="royal-pattern"></div>
    </div>

    <!-- Background Music -->
    {% if invitation.background_music %}
    <audio id="bgMusic" loop>
        <source src="{{ url_for('static', filename='music/' + invitation.background_music) }}" type="audio/mpeg">
    </audio>
    <button class="music-control" onclick="toggleMusic()">
        <i class="fas fa-music" id="musicIcon"></i>
    </button>
    {% endif %}

    <!-- Hero Section -->
    <section class="hero">
        <div class="container" id="mainContent" style="display: none;"><div class="container">
            <div class="royal-crown">â™”</div>
            <h1 class="hero-title royal-font">Royal Wedding Invitation</h1>
            <h2 class="hero-names royal-font">{{ invitation.couple_name }}</h2>
            <p class="hero-subtitle">Request the honor of your presence</p>
            {% if invitation.wedding_date %}
            <div class="hero-date royal-font">{{ invitation.wedding_date.strftime('%B %d, %Y') }}</div>
            {% endif %}
        </div>

        
        
        <!-- Countdown Section -->
        <section class="countdown-section" style="background: rgba(255,255,255,0.1); padding: 4rem 0; text-align: center;">
            <div class="container">
                <h2 class="section-title" style="color: white; font-family: 'Dancing Script', cursive; font-size: 2.5rem; margin-bottom: 2rem;">Menuju Hari Bahagia</h2>
                {% if invitation.wedding_date %}
                <div class="countdown-timer" id="countdownTimer" style="display: flex; justify-content: center; gap: 1.5rem; flex-wrap: wrap; margin-top: 2rem;">
                    <div class="countdown-item" style="text-align: center; background: rgba(255,255,255,0.2); padding: 2rem 1.5rem; border-radius: 15px; backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.3); min-width: 100px;">
                        <span class="countdown-number" id="weeks" style="display: block; font-size: 3rem; font-weight: 700; color: white; font-family: 'Dancing Script', cursive;">00</span>
                        <span class="countdown-label" style="font-size: 0.9rem; color: rgba(255,255,255,0.8); text-transform: uppercase; letter-spacing: 1px; margin-top: 0.5rem;">Minggu</span>
                    </div>
                    <div class="countdown-item" style="text-align: center; background: rgba(255,255,255,0.2); padding: 2rem 1.5rem; border-radius: 15px; backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.3); min-width: 100px;">
                        <span class="countdown-number" id="days" style="display: block; font-size: 3rem; font-weight: 700; color: white; font-family: 'Dancing Script', cursive;">00</span>
                        <span class="countdown-label" style="font-size: 0.9rem; color: rgba(255,255,255,0.8); text-transform: uppercase; letter-spacing: 1px; margin-top: 0.5rem;">Hari</span>
                    </div>
                    <div class="countdown-item" style="text-align: center; background: rgba(255,255,255,0.2); padding: 2rem 1.5rem; border-radius: 15px; backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.3); min-width: 100px;">
                        <span class="countdown-number" id="hours" style="display: block; font-size: 3rem; font-weight: 700; color: white; font-family: 'Dancing Script', cursive;">00</span>
                        <span class="countdown-label" style="font-size: 0.9rem; color: rgba(255,255,255,0.8); text-transform: uppercase; letter-spacing: 1px; margin-top: 0.5rem;">Jam</span>
                    </div>
                    <div class="countdown-item" style="text-align: center; background: rgba(255,255,255,0.2); padding: 2rem 1.5rem; border-radius: 15px; backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.3); min-width: 100px;">
                        <span class="countdown-number" id="minutes" style="display: block; font-size: 3rem; font-weight: 700; color: white; font-family: 'Dancing Script', cursive;">00</span>
                        <span class="countdown-label" style="font-size: 0.9rem; color: rgba(255,255,255,0.8); text-transform: uppercase; letter-spacing: 1px; margin-top: 0.5rem;">Menit</span>
                    </div>
                </div>
                {% endif %}
            </div>
        </section>




    </section>

    <!-- Royal Divider -->
    <div class="royal-divider">
        <div class="divider-content">
            <div class="divider-line"></div>
            <i class="fas fa-crown"></i>
            <div class="divider-line"></div>
        </div>
    </div>

    <!-- Couple Section -->
    <div class="container">
        <div class="content-section">
            <div class="section-header">
                <h2 class="section-title royal-font">The Royal Couple</h2>
                <p class="section-subtitle">United in love, bound by destiny</p>
            </div>
            <div class="couple-container">
                <div class="row g-5">
                    <div class="col-lg-6">
                        <div class="couple-card">
                            <div class="royal-avatar">
                                <i class="fas fa-female"></i>
                            </div>
                            <h3 class="couple-name royal-font">
                                {% if invitation.bride_title %}{{ invitation.bride_title }} {% endif %}{{ invitation.bride_name }}
                            </h3>
                            <div class="couple-title">The Bride</div>
                            <div class="couple-parents">
                                <strong>Beloved daughter of</strong><br>
                                {{ invitation.bride_father }}<br>
                                & {{ invitation.bride_mother }}
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="couple-card">
                            <div class="royal-avatar">
                                <i class="fas fa-male"></i>
                            </div>
                            <h3 class="couple-name royal-font">
                                {% if invitation.groom_title %}{{ invitation.groom_title }} {% endif %}{{ invitation.groom_name }}
                            </h3>
                            <div class="couple-title">The Groom</div>
                            <div class="couple-parents">
