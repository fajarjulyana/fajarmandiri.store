<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ invitation.bride_name }} & {{ invitation.groom_name }} - Wedding Invitation</title>

    <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Cormorant+Garamond:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>

        /* Cover Page Styles */
        .cover-page {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            text-align: center;
            color: white;
        }

        .cover-content {
            max-width: 400px;
            padding: 2rem;
        }

        .couple-initials {
            font-size: 4rem;
            font-family: 'Dancing Script', cursive;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        .couple-initials .fas {
            font-size: 2rem;
            animation: heartbeat 1.5s ease-in-out infinite;
        }

        @keyframes heartbeat {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.2); }
        }

        .couple-names {
            font-family: 'Dancing Script', cursive;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .wedding-date {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .open-invitation-btn {
            background: rgba(255,255,255,0.2);
            border: 2px solid white;
            color: white;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .open-invitation-btn:hover {
            background: white;
            color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        /* Countdown Styles */
        .countdown-section {
            background: rgba(255,255,255,0.1);
            padding: 4rem 0;
            text-align: center;
        }

        .countdown-timer {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
            margin-top: 2rem;
        }

        .countdown-item {
            text-align: center;
            background: rgba(255,255,255,0.2);
            padding: 2rem 1.5rem;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.3);
            min-width: 120px;
        }

        .countdown-number {
            display: block;
            font-size: 3rem;
            font-weight: 700;
            color: white;
            font-family: 'Dancing Script', cursive;
        }

        .countdown-label {
            font-size: 0.9rem;
            color: rgba(255,255,255,0.8);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 0.5rem;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Cormorant Garamond', serif;
            background: linear-gradient(135deg, #faf8f5 0%, #f0ede7 100%);
            min-height: 100vh;
            color: #5a4f42;
        }

        .invitation-container {
            max-width: 400px;
            margin: 0 auto;
            background: #fff;
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }

        .hero-section {
            position: relative;
            height: 100vh;
            background: linear-gradient(rgba(139,115,85,0.1), rgba(139,115,85,0.2)),
                        url('{{ url_for("static", filename="images/templates/elegant-bg.jpg") }}') center/cover;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            overflow: hidden;
        }

        .decorative-frame {
            position: absolute;
            top: 50px;
            left: 30px;
            right: 30px;
            bottom: 50px;
            border: 2px solid rgba(139,115,85,0.3);
            border-radius: 20px;
        }

        .decorative-corners {
            position: absolute;
        }

        .corner-tl {
            top: 35px;
            left: 35px;
            width: 30px;
            height: 30px;
            border-top: 3px solid #8B7355;
            border-left: 3px solid #8B7355;
            border-radius: 5px 0 0 0;
        }

        .corner-tr {
            top: 35px;
            right: 35px;
            width: 30px;
            height: 30px;
            border-top: 3px solid #8B7355;
            border-right: 3px solid #8B7355;
            border-radius: 0 5px 0 0;
        }

        .corner-bl {
            bottom: 35px;
            left: 35px;
            width: 30px;
            height: 30px;
            border-bottom: 3px solid #8B7355;
            border-left: 3px solid #8B7355;
            border-radius: 0 0 0 5px;
        }

        .corner-br {
            bottom: 35px;
            right: 35px;
            width: 30px;
            height: 30px;
            border-bottom: 3px solid #8B7355;
            border-right: 3px solid #8B7355;
            border-radius: 0 0 5px 0;
        }

        .wedding-title {
            font-size: 0.9rem;
            letter-spacing: 3px;
            text-transform: uppercase;
            color: #8B7355;
            margin-bottom: 20px;
            font-weight: 400;
        }

        .couple-names {
            font-family: 'Great Vibes', cursive;
            font-size: 3.5rem;
            color: #8B7355;
            margin: 20px 0;
            line-height: 0.9;
        }

        .wedding-date-hero {
            font-size: 1rem;
            color: #8B7355;
            letter-spacing: 1px;
            margin-top: 30px;
        }

        .content-section {
            padding: 50px 30px;
            background: white;
        }

        .section-divider {
            width: 60px;
            height: 2px;
            background: #8B7355;
            margin: 0 auto 30px;
        }

        .section-title {
            font-size: 1.8rem;
            color: #8B7355;
            text-align: center;
            margin-bottom: 40px;
            font-weight: 400;
        }

        .couple-details {
            display: flex;
            flex-direction: column;
            gap: 40px;
            margin-bottom: 50px;
        }

        .person-card {
            text-align: center;
            padding: 30px 20px;
            background: #faf8f5;
            border-radius: 15px;
            border: 1px solid rgba(139,115,85,0.1);
        }

        .person-name {
            font-family: 'Great Vibes', cursive;
            font-size: 2.2rem;
            color: #8B7355;
            margin-bottom: 15px;
        }

        .person-title {
            font-size: 0.9rem;
            color: #8B7355;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 15px;
        }

        .parents-info {
            font-size: 1rem;
            color: #7a6b5d;
            line-height: 1.8;
        }

        .event-section {
            background: linear-gradient(135deg, #8B7355 0%, #a08670 100%);
            color: white;
            padding: 50px 30px;
            text-align: center;
        }

        .event-card {
            background: rgba(255,255,255,0.95);
            color: #5a4f42;
            padding: 40px 30px;
            border-radius: 20px;
            margin-top: 30px;
            backdrop-filter: blur(10px);
        }

        .event-time {
            font-size: 1.4rem;
            color: #8B7355;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .venue-name {
            font-family: 'Great Vibes', cursive;
            font-size: 2rem;
            color: #8B7355;
            margin-bottom: 15px;
        }

        .venue-address {
            font-size: 1rem;
            color: #7a6b5d;
            line-height: 1.6;
            margin-bottom: 25px;
        }

        .maps-btn {
            background: #8B7355;
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 30px;
            font-size: 0.95rem;
            font-weight: 500;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .maps-btn:hover {
            background: #7a634a;
            transform: translateY(-2px);
            color: white;
        }

        .rsvp-section {
            padding: 50px 30px;
            background: #faf8f5;
        }

        .rsvp-form {
            max-width: 350px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            font-size: 1rem;
            color: #8B7355;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .form-input {
            width: 100%;
            padding: 15px 20px;
            border: 2px solid rgba(139,115,85,0.2);
            border-radius: 10px;
            font-size: 1rem;
            font-family: 'Cormorant Garamond', serif;
            background: white;
            color: #5a4f42;
            transition: border-color 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #8B7355;
        }

        .submit-btn {
            background: linear-gradient(135deg, #8B7355 0%, #a08670 100%);
            color: white;
            padding: 18px 40px;
            border: none;
            border-radius: 30px;
            font-size: 1.1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(139,115,85,0.3);
        }

        .gift-section {
            padding: 50px 30px;
            background: white;
            text-align: center;
        }

        .gift-cards {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-top: 30px;
        }

        .gift-card {
            background: #faf8f5;
            padding: 30px 25px;
            border-radius: 15px;
            border: 2px solid rgba(139,115,85,0.1);
            transition: all 0.3s ease;
        }

        .gift-card:hover {
            border-color: rgba(139,115,85,0.3);
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        .gift-card h4 {
            color: #8B7355;
            margin-bottom: 15px;
            font-size: 1.3rem;
        }

        .account-number {
            font-size: 1.3rem;
            font-weight: 600;
            color: #8B7355;
            background: white;
            padding: 10px 15px;
            border-radius: 8px;
            margin: 10px 0;
            border: 1px solid rgba(139,115,85,0.2);
        }

        .qr-display {
            width: 180px;
            height: 180px;
            margin: 20px auto;
            border: 3px solid #8B7355;
            border-radius: 15px;
        }

        /* Gallery Styles */
        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin-top: 30px;
        }

        .gallery-item {
            aspect-ratio: 1;
            border-radius: 15px;
            overflow: hidden;
            position: relative;
            cursor: pointer;
            transition: transform 0.3s ease;
            border: 2px solid rgba(139,115,85,0.2);
        }

        .gallery-item:hover {
            transform: scale(1.05);
            border-color: #8B7355;
        }

        .gallery-item:hover .gallery-overlay {
            opacity: 1;
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .gallery-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(139,115,85,0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
            color: white;
            font-size: 1.5rem;
        }

        /* Floating Music Button */
        .floating-music {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 60px;
            height: 60px;
            background: #8B7355;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(139,115,85,0.4);
            z-index: 1000;
            transition: all 0.3s ease;
        }

        .floating-music:hover {
            transform: scale(1.1);
            background: #7a634a;
        }

        .floating-music.playing {
            animation: musicPulse 2s linear infinite;
        }

        @keyframes musicPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        @media (min-width: 768px) {
            .invitation-container {
                max-width: 500px;
                margin: 30px auto;
                border-radius: 25px;
                box-shadow: 0 15px 60px rgba(0,0,0,0.15);
            }

            .hero-section {
                border-radius: 25px 25px 0 0;
            }

            .couple-details {
                flex-direction: row;
                gap: 30px;
            }

            .person-card {
                flex: 1;
            }

            .gift-cards {
                flex-direction: row;
            }

            .gift-card {
                flex: 1;
            }

            .gallery-grid {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        @media (max-width: 768px) {
            .gallery-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .scroll-fade {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s ease;
        }

        .scroll-fade.visible {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</head>
<body>

    <!-- Cover Page -->
    <div id="coverPage" class="cover-page">
        <div class="cover-content">
            <div class="couple-initials">
                <span>{{ invitation.bride_name[0] if invitation.bride_name else 'B' }}</span>
                <i class="fas fa-heart"></i>
                <span>{{ invitation.groom_name[0] if invitation.groom_name else 'G' }}</span>
            </div>
            <h1 class="couple-names">{{ invitation.couple_name }}</h1>
            <p class="wedding-date">
                {% if invitation.wedding_date %}
                    {{ invitation.wedding_date.strftime('%d %B %Y') if invitation.wedding_date.__class__.__name__ == 'datetime' else invitation.wedding_date }}
                {% else %}
                    Segera
                {% endif %}
            </p>
            <button class="open-invitation-btn" onclick="openInvitation()">
                <i class="fas fa-envelope-open me-2"></i>Buka Undangan
            </button>
        </div>
    </div>

    <div class="container" id="mainContent" style="display: none;"><div class="invitation-container">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="decorative-frame"></div>
            <div class="decorative-corners corner-tl"></div>
            <div class="decorative-corners corner-tr"></div>
            <div class="decorative-corners corner-bl"></div>
            <div class="decorative-corners corner-br"></div>

            <div class="wedding-title scroll-fade">The Wedding of</div>
            <h1 class="couple-names scroll-fade">{{ invitation.bride_name }}<br>&<br>{{ invitation.groom_name }}</h1>
            <div class="wedding-date-hero scroll-fade">{{ invitation.wedding_date.strftime('%A, %d %B %Y') if invitation.wedding_date else 'Minggu, 31 Desember 2025' }}</div>
        </section>

        <!-- Couple Details -->
        <section class="content-section scroll-fade">
            <h2 class="section-title">Mempelai</h2>
            <div class="section-divider"></div>

            <div class="couple-details">
                <div class="person-card">
                    <div class="person-title">Mempelai Wanita</div>
                    <div class="person-name">{{ invitation.bride_name }}</div>
                    <div class="parents-info">
                        Putri dari<br>
                        Bpk. {{ invitation.bride_father }}<br>
                        & Ibu {{ invitation.bride_mother }}
                    </div>
                </div>

                <div class="person-card">
                    <div class="person-title">Mempelai Pria</div>
                    <div class="person-name">{{ invitation.groom_name }}</div>
                    <div class="parents-info">
                        Putra dari<br>
                        Bpk. {{ invitation.groom_father }}<br>
                        & Ibu {{ invitation.groom_mother }}
                    </div>
                </div>
            </div>
        </section>

        <!-- Event Details -->
        <section class="event-section scroll-fade">
            <h2 class="section-title" style="color: white;">Detail Acara</h2>
            <div class="section-divider" style="background: white;"></div>

            <div class="event-card">
                <div class="event-time">{{ invitation.wedding_time or '10:00' }} WIB - Selesai</div>
                <div class="venue-name">{{ invitation.venue_name or 'Gedung Pernikahan' }}</div>
                <div class="venue-address">{{ invitation.venue_address }}</div>
                {% if invitation.venue_address.startswith('http') %}
                        <a href="{{ invitation.venue_address }}" target="_blank" class="maps-btn">
                            <i class="fas fa-map-marked-alt me-2"></i>View on Maps
                        </a>
                    {% else %}
                        <a href="https://maps.google.com/?q={{ invitation.venue_address }}" target="_blank" class="maps-btn">
                            <i class="fas fa-map-marked-alt me-2"></i>View on Maps
                        </a>
                    {% endif %}
                    <i class="fas fa-map-marker-alt"></i> Lihat Lokasi
                </a>
            </div>
        </section>

        <!-- Countdown Section -->
        <section class="countdown-section">
            <h2 class="section-title">Menuju Hari Bahagia</h2>
            {% if invitation.wedding_date %}
            <div class="countdown-timer" id="countdownTimer">
                <div class="countdown-item">
                    <span class="countdown-number" id="days">00</span>
                    <span class="countdown-label">Hari</span>
                </div>
                <div class="countdown-item">
                    <span class="countdown-number" id="hours">00</span>
                    <span class="countdown-label">Jam</span>
                </div>
                <div class="countdown-item">
                    <span class="countdown-number" id="minutes">00</span>
                    <span class="countdown-label">Menit</span>
                </div>
                <div class="countdown-item">
                    <span class="countdown-number" id="seconds">00</span>
                    <span class="countdown-label">Detik</span>
                </div>
            </div>
            {% endif %}
        </section>



        <!-- RSVP Section -->
        <section class="rsvp-section scroll-fade">
            <h2 class="section-title">Konfirmasi Kehadiran</h2>
            <div class="section-divider"></div>

            <form class="rsvp-form" method="POST" action="{{ url_for('rsvp_wedding', invitation_id=invitation.id) }}">
                <div class="form-group">
                    <label class="form-label">Nama Lengkap</label>
                    <input type="text" name="name" class="form-input" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Nomor WhatsApp</label>
                    <input type="text" name="phone" class="form-input">
                </div>

                <div class="form-group">
                    <label class="form-label">Konfirmasi Kehadiran</label>
                    <select name="attendance" class="form-input" required>
                        <option value="">Pilih konfirmasi</option>
                        <option value="hadir">Hadir</option>
                        <option value="tidak_hadir">Tidak Dapat Hadir</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Jumlah Tamu</label>
                    <select name="guest_count" class="form-input">
                        <option value="1">1 Orang</option>
                        <option value="2">2 Orang</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Pesan & Doa</label>
                    <textarea name="wishes" class="form-input" rows="4" placeholder="Berikan pesan dan doa untuk kami..."></textarea>
                </div>

                <button type="submit" class="submit-btn">Kirim Konfirmasi</button>
            </form>
        </section>

        <!-- Gallery Section -->
        {% if prewedding_photos %}
        <section class="content-section scroll-fade" style="background: #faf8f5;">
            <h2 class="section-title">Gallery Pre-Wedding</h2>
            <div class="section-divider"></div>

            <div class="gallery-grid">
                {% for photo in prewedding_photos %}
                <div class="gallery-item" onclick="openPhotoModal('{{ url_for('static', filename='prewedding_photos/' + photo) }}')">
                    <img src="{{ url_for('static', filename='prewedding_photos/' + photo) }}" alt="Prewedding Photo" loading="lazy">
                    <div class="gallery-overlay">
                        <i class="fas fa-expand"></i>
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>

        <!-- Photo Modal -->
        <div class="modal fade" id="photoModal" tabindex="-1">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content" style="background: transparent; border: none;">
                    <div class="modal-body p-0">
                        <button type="button" class="btn-close position-absolute top-0 end-0 m-3" 
                                data-bs-dismiss="modal" style="z-index: 1050; filter: invert(1);"></button>
                        <img id="modalImage" src="" alt="Gallery Photo" class="w-100 rounded">
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Gift Section -->
        <section class="gift-section scroll-fade">
            <h2 class="section-title">Amplop Digital</h2>
            <div class="section-divider"></div>

            <p style="margin-bottom: 30px; color: #7a6b5d; line-height: 1.6;">
                Doa restu Anda adalah kado terindah bagi kami.<br>
                Namun jika ingin memberikan kado, bisa melalui:
            </p>

            <div class="gift-cards">
                {% if invitation.bank_name and invitation.bank_account %}
                <div class="gift-card">
                    <h4><i class="fas fa-university"></i> {{ invitation.bank_name }}</h4>
                    <div class="account-number">{{ invitation.bank_account }}</div>
                    <p style="color: #8B7355;">a.n. {{ invitation.account_holder or invitation.bride_name }}</p>
                </div>
                {% endif %}

                {% if invitation.qris_code %}
                <div class="gift-card">
                    <h4><i class="fas fa-qrcode"></i> QRIS Payment</h4>
                    <img src="data:image/png;base64,{{ invitation.qris_code }}" class="qr-display" alt="QRIS Code">
                </div>
                {% endif %}
            </div>
        </section>
    </div>

    <!-- Floating Music Button -->
    <div class="floating-music" id="musicToggle">
        <i class="fas fa-music" id="musicIcon"></i>
    </div>

    <!-- Audio Player -->
    <audio id="backgroundMusic" loop preload="auto">
        {% if invitation.background_music %}
            <source src="{{ url_for('static', filename='music/' + invitation.background_music) }}" type="audio/mpeg">
        {% else %}
            <source src="{{ url_for('static', filename='music/default_wedding.mp3') }}" type="audio/mpeg">
        {% endif %}
        <source src="{{ url_for('static', filename='music/default_wedding.mp3') }}" type="audio/mpeg">
    </audio>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Intersection Observer for scroll animations
        const observerOptions = {
            threshold: 0.15,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.scroll-fade').forEach(el => {
            observer.observe(el);
        });

        // Music functionality
        let isPlaying = false;
        const audio = document.getElementById('backgroundMusic');
        const musicToggle = document.getElementById('musicToggle');
        const musicIcon = document.getElementById('musicIcon');

        if (audio && musicToggle) {
            audio.volume = 0.3;

            // Try autoplay on load
            audio.play().then(() => {
                isPlaying = true;
                musicIcon.className = 'fas fa-pause';
                musicToggle.classList.add('playing');
                console.log('Music autoplaying');
            }).catch(() => {
                console.log('Autoplay blocked, waiting for user interaction');
            });

            musicToggle.addEventListener('click', function() {
                if (isPlaying) {
                    audio.pause();
                    musicIcon.className = 'fas fa-music';
                    musicToggle.classList.remove('playing');
                } else {
                    audio.play().catch(console.error);
                    musicIcon.className = 'fas fa-pause';
                    musicToggle.classList.add('playing');
                }
                isPlaying = !isPlaying;
            });

            // Auto-play attempt after any user interaction
            const startMusic = () => {
                if (!isPlaying && audio.src) {
                    audio.play().then(() => {
                        isPlaying = true;
                        musicIcon.className = 'fas fa-pause';
                        musicToggle.classList.add('playing');
                        console.log('Music started after user interaction');
                    }).catch(console.error);
                }
            };

            // Try on multiple interaction types
            document.addEventListener('click', startMusic, { once: true });
            document.addEventListener('touchstart', startMusic, { once: true });
            document.addEventListener('scroll', startMusic, { once: true });

            // Handle audio events
            audio.addEventListener('play', () => {
                isPlaying = true;
                musicIcon.className = 'fas fa-pause';
                musicToggle.classList.add('playing');
            });

            audio.addEventListener('pause', () => {
                isPlaying = false;
                musicIcon.className = 'fas fa-music';
                musicToggle.classList.remove('playing');
            });

            audio.addEventListener('loadeddata', function() {
                console.log('Audio loaded successfully');
                if (!isPlaying) {
                    audio.play().catch(() => {});
                }
            });

            audio.addEventListener('error', function(e) {
                console.log('Audio error:', e);
                musicToggle.style.display = 'none';
            });
        }

        // Photo modal functionality
        function openPhotoModal(imageSrc) {
            const modal = new bootstrap.Modal(document.getElementById('photoModal'));
            document.getElementById('modalImage').src = imageSrc;
            modal.show();
        }
    </script>
</div>
<script>

        // Open invitation function
        function openInvitation() {
            const coverPage = document.getElementById('coverPage');
            const mainContent = document.getElementById('mainContent');
            const music = document.getElementById('backgroundMusic');

            coverPage.style.transition = 'opacity 1s ease-out';
            coverPage.style.opacity = '0';

            setTimeout(() => {
                coverPage.style.display = 'none';
                mainContent.style.display = 'block';
                mainContent.style.opacity = '0';

                setTimeout(() => {
                    mainContent.style.transition = 'opacity 1s ease-in';
                    mainContent.style.opacity = '1';
                }, 100);

                // Play background music
                if (music) {
                    music.play().catch(e => console.log('Audio play failed:', e));
                }

                // Start countdown if wedding date exists
                {% if invitation.wedding_date %}
                startCountdown();
                {% endif %}
            }, 1000);
        }

        // Countdown function
        {% if invitation.wedding_date %}
        function startCountdown() {
            const weddingDate = new Date("{{ invitation.wedding_date.strftime('%Y-%m-%d') if invitation.wedding_date.__class__.__name__ == 'datetime' else invitation.wedding_date }}").getTime();

            function updateCountdown() {
                const now = new Date().getTime();
                const distance = weddingDate - now;

                if (distance > 0) {
                    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                    document.getElementById('days').innerText = days.toString().padStart(2, '0');
                    document.getElementById('hours').innerText = hours.toString().padStart(2, '0');
                    document.getElementById('minutes').innerText = minutes.toString().padStart(2, '0');
                    document.getElementById('seconds').innerText = seconds.toString().padStart(2, '0');
                } else {
                    document.getElementById('countdownTimer').innerHTML = 
                        '<div class="text-center"><h3 style="color: #667eea;">Hari Bahagia Telah Tiba! 🎉</h3></div>';
                }
            }

            updateCountdown();
            setInterval(updateCountdown, 1000);
        }
        {% endif %}

</script>
