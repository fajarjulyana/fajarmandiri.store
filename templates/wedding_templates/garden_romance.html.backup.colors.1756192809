<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ invitation.bride_name }} & {{ invitation.groom_name }} - Wedding Invitation</title>

    <link href="https://fonts.googleapis.com/css2?family=Sacramento&family=Lora:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>

        /* Cover Page Styles */
        .cover-page {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            text-align: center;
            color: white;
        }

        .cover-content {
            max-width: 400px;
            padding: 2rem;
        }

        .couple-initials {
            font-size: 4rem;
            font-family: 'Dancing Script', cursive;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        .couple-initials .fas {
            font-size: 2rem;
            animation: heartbeat 1.5s ease-in-out infinite;
        }

        @keyframes heartbeat {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.2); }
        }

        .couple-names {
            font-family: 'Dancing Script', cursive;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        }

        .wedding-date {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .open-invitation-btn {
            background: rgba(255,255,255,0.2);
            border: 2px solid white;
            color: white;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .open-invitation-btn:hover {
            background: white;
            color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

        /* Countdown Styles */
        .countdown-section {
            background: rgba(255,255,255,0.1);
            padding: 4rem 0;
            text-align: center;
        }

        .countdown-timer {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
            margin-top: 2rem;
        }

        .countdown-item {
            text-align: center;
            background: rgba(255,255,255,0.2);
            padding: 2rem 1.5rem;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.3);
            min-width: 120px;
        }

        .countdown-number {
            display: block;
            font-size: 3rem;
            font-weight: 700;
            color: white;
            font-family: 'Dancing Script', cursive;
        }

        .countdown-label {
            font-size: 0.9rem;
            color: rgba(255,255,255,0.8);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 0.5rem;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Lora', serif;
            background: linear-gradient(135deg, #f0f8e8 0%, #e8f5d8 100%);
            min-height: 100vh;
            color: #2d5016;
        }

        .invitation-container {
            max-width: 400px;
            margin: 0 auto;
            background: #fff;
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }

        .floral-border {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 800"><path d="M50,50 Q70,30 90,50 Q110,70 130,50" fill="none" stroke="%23a3c585" stroke-width="2" opacity="0.3"/><path d="M350,50 Q330,30 310,50 Q290,70 270,50" fill="none" stroke="%23a3c585" stroke-width="2" opacity="0.3"/><circle cx="80" cy="100" r="8" fill="%23c4d9a8" opacity="0.4"/><circle cx="320" cy="100" r="6" fill="%23a3c585" opacity="0.5"/></svg>') repeat-y;
            pointer-events: none;
        }

        .hero-section {
            height: 100vh;
            background: linear-gradient(rgba(163,197,133,0.05), rgba(196,217,168,0.1)), 
                        radial-gradient(circle at 30% 70%, rgba(163,197,133,0.1) 0%, transparent 50%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            position: relative;
            padding: 30px;
        }

        .floral-frame {
            position: absolute;
            width: 300px;
            height: 300px;
            border: 3px solid rgba(163,197,133,0.3);
            border-radius: 50%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .floral-frame::before {
            content: 'ðŸŒ¿';
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 2rem;
            background: white;
            padding: 0 10px;
        }

        .floral-frame::after {
            content: 'ðŸŒ¸';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 2rem;
            background: white;
            padding: 0 10px;
        }

        .wedding-announcement {
            font-size: 0.9rem;
            color: #5a7c3a;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 25px;
            font-weight: 500;
        }

        .couple-names {
            font-family: 'Sacramento', cursive;
            font-size: 3.2rem;
            color: #2d5016;
            margin: 25px 0;
            line-height: 1.1;
            position: relative;
            z-index: 2;
        }

        .wedding-date {
            font-size: 1.1rem;
            color: #5a7c3a;
            font-weight: 500;
            position: relative;
            z-index: 2;
        }

        .content-section {
            padding: 50px 30px;
            background: white;
            position: relative;
        }

        .section-title {
            font-family: 'Sacramento', cursive;
            font-size: 2.2rem;
            color: #2d5016;
            text-align: center;
            margin-bottom: 35px;
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 2px;
            background: linear-gradient(90deg, transparent, #a3c585, transparent);
        }

        .mempelai-cards {
            display: flex;
            flex-direction: column;
            gap: 25px;
            margin-bottom: 40px;
        }

        .mempelai-card {
            background: linear-gradient(135deg, #f9fdf6 0%, #f0f8e8 100%);
            padding: 30px 25px;
            border-radius: 20px;
            text-align: center;
            border: 1px solid rgba(163,197,133,0.2);
            position: relative;
            overflow: hidden;
        }

        .mempelai-card::before {
            content: 'ðŸŒº';
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 1.5rem;
            opacity: 0.3;
        }

        .mempelai-name {
            font-family: 'Sacramento', cursive;
            font-size: 2rem;
            color: #2d5016;
            margin-bottom: 15px;
        }

        .mempelai-parents {
            font-size: 1rem;
            color: #5a7c3a;
            line-height: 1.7;
        }

        .event-section {
            background: linear-gradient(135deg, #5a7c3a 0%, #2d5016 100%);
            color: white;
            padding: 50px 30px;
            position: relative;
            overflow: hidden;
        }

        .event-section::before {
            content: '';
            position: absolute;
            top: -50px;
            left: -50px;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            border-radius: 50%;
        }

        .event-card {
            background: rgba(255,255,255,0.95);
            color: #2d5016;
            padding: 35px 25px;
            border-radius: 20px;
            text-align: center;
            margin-top: 25px;
            position: relative;
        }

        .event-time {
            font-size: 1.3rem;
            color: #5a7c3a;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .venue-name {
            font-family: 'Sacramento', cursive;
            font-size: 1.8rem;
            color: #2d5016;
            margin-bottom: 15px;
        }

        .venue-address {
            color: #5a7c3a;
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 25px;
        }

        .maps-link {
            background: #5a7c3a;
            color: white;
            padding: 12px 25px;
            border: none;
            border-radius: 25px;
            font-size: 0.95rem;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .maps-link:hover {
            background: #2d5016;
            transform: translateY(-2px);
            color: white;
        }

        .rsvp-section {
            padding: 50px 30px;
            background: #f9fdf6;
            position: relative;
        }

        .rsvp-form {
            max-width: 340px;
            margin: 0 auto;
        }

        .form-field {
            margin-bottom: 22px;
        }

        .field-label {
            display: block;
            font-size: 1rem;
            color: #2d5016;
            margin-bottom: 8px;
            font-weight: 500;
        }

        .field-input {
            width: 100%;
            padding: 14px 18px;
            border: 2px solid rgba(163,197,133,0.3);
            border-radius: 12px;
            font-size: 1rem;
            color: #2d5016;
            background: white;
            font-family: 'Lora', serif;
            transition: border-color 0.3s ease;
        }

        .field-input:focus {
            outline: none;
            border-color: #5a7c3a;
        }

        .submit-btn {
            background: linear-gradient(135deg, #5a7c3a 0%, #2d5016 100%);
            color: white;
            padding: 16px 35px;
            border: none;
            border-radius: 25px;
            font-size: 1.1rem;
            font-weight: 500;
            cursor: pointer;
            width: 100%;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(90,124,58,0.3);
        }

        .gift-section {
            padding: 50px 30px;
            background: white;
            text-align: center;
        }

        .gift-intro {
            color: #5a7c3a;
            font-size: 1rem;
            line-height: 1.7;
            margin-bottom: 35px;
        }

        .payment-options {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .payment-option {
            background: #f9fdf6;
            padding: 25px 20px;
            border-radius: 15px;
            border: 1px solid rgba(163,197,133,0.2);
            transition: all 0.3s ease;
        }

        .payment-option:hover {
            border-color: rgba(163,197,133,0.4);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

        .payment-option h4 {
            color: #2d5016;
            margin-bottom: 15px;
            font-size: 1.2rem;
        }

        .account-details {
            font-size: 1.2rem;
            font-weight: 600;
            color: #5a7c3a;
            background: white;
            padding: 12px 15px;
            border-radius: 8px;
            margin: 12px 0;
            border: 1px solid rgba(163,197,133,0.3);
        }

        .qr-code-img {
            width: 160px;
            height: 160px;
            margin: 20px auto;
            border: 3px solid #a3c585;
            border-radius: 12px;
        }

        @media (min-width: 768px) {
            .invitation-container {
                max-width: 500px;
                margin: 25px auto;
                border-radius: 25px;
                box-shadow: 0 15px 50px rgba(0,0,0,0.15);
            }

            .mempelai-cards {
                flex-direction: row;
                gap: 20px;
            }

            .mempelai-card {
                flex: 1;
            }

            .payment-options {
                flex-direction: row;
            }

            .payment-option {
                flex: 1;
            }
        }

        .slide-in {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.7s ease;
        }

        .slide-in.visible {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</head>
<body>

    <!-- Cover Page -->
    <div id="coverPage" class="cover-page">
        <div class="cover-content">
            <div class="couple-initials">
                <span>{{ invitation.bride_name[0] if invitation.bride_name else 'B' }}</span>
                <i class="fas fa-heart"></i>
                <span>{{ invitation.groom_name[0] if invitation.groom_name else 'G' }}</span>
            </div>
            <h1 class="couple-names">{{ invitation.couple_name }}</h1>
            <p class="wedding-date">
                {% if invitation.wedding_date %}
                    {{ invitation.wedding_date.strftime('%d %B %Y') if invitation.wedding_date.__class__.__name__ == 'datetime' else invitation.wedding_date }}
                {% else %}
                    Segera
                {% endif %}
            </p>
            <button class="open-invitation-btn" onclick="openInvitation()">
                <i class="fas fa-envelope-open me-2"></i>Buka Undangan
            </button>
        </div>
    </div>

    <div class="container" id="mainContent" style="display: none;"><div class="invitation-container">
        <div class="floral-border"></div>

        <!-- Audio Player -->
    <audio id="backgroundMusic" loop preload="auto">
        {% if invitation.background_music %}
            <source src="{{ url_for('static', filename='music/' + invitation.background_music) }}" type="audio/mpeg">
        {% else %}
            <source src="{{ url_for('static', filename='music/default_wedding.mp3') }}" type="audio/mpeg">
        {% endif %}
        <source src="{{ url_for('static', filename='music/default_wedding.mp3') }}" type="audio/mpeg">
    </audio>

        <!-- Hero Section -->
        <section class="hero-section">
            <div class="floral-frame"></div>
            <div class="wedding-announcement slide-in">The Wedding of</div>
            <h1 class="couple-names slide-in">{{ invitation.bride_name }}<br>&<br>{{ invitation.groom_name }}</h1>
            <div class="wedding-date slide-in">{{ invitation.wedding_date.strftime('%A, %d %B %Y') if invitation.wedding_date else 'Sabtu, 15 Juni 2025' }}</div>
        </section>

        <!-- Countdown Section -->
        <section class="countdown-section">
            <h2 class="section-title">Menuju Hari Bahagia</h2>
            {% if invitation.wedding_date %}
            <div class="countdown-timer" id="countdownTimer">
                <div class="countdown-item">
                    <span class="countdown-number" id="days">00</span>
                    <span class="countdown-label">Hari</span>
                </div>
                <div class="countdown-item">
                    <span class="countdown-number" id="hours">00</span>
                    <span class="countdown-label">Jam</span>
                </div>
                <div class="countdown-item">
                    <span class="countdown-number" id="minutes">00</span>
                    <span class="countdown-label">Menit</span>
                </div>
                <div class="countdown-item">
                    <span class="countdown-number" id="seconds">00</span>
                    <span class="countdown-label">Detik</span>
                </div>
            </div>
            {% endif %}
        </section>



        <!-- Mempelai Section -->
        <section class="content-section slide-in">
            <h2 class="section-title">Mempelai</h2>

            <div class="mempelai-cards">
                <div class="mempelai-card">
                    <div class="mempelai-name">{{ invitation.bride_name }}</div>
                    <div class="mempelai-parents">
                        Putri dari<br>
                        {{ invitation.bride_father }}<br>
                        & {{ invitation.bride_mother }}
                    </div>
                </div>

                <div class="mempelai-card">
                    <div class="mempelai-name">{{ invitation.groom_name }}</div>
                    <div class="mempelai-parents">
                        Putra dari<br>
                        {{ invitation.groom_father }}<br>
                        & {{ invitation.groom_mother }}
                    </div>
                </div>
            </div>
        </section>

        <!-- Event Section -->
        <section class="event-section slide-in">
            <h2 class="section-title" style="color: white;">Waktu & Tempat</h2>

            <div class="event-card">
                <div class="event-time">{{ invitation.wedding_time or '10:00' }} - Selesai</div>
                <div class="venue-name">{{ invitation.venue_name or 'Garden Wedding Venue' }}</div>
                <div class="venue-address">{{ invitation.venue_address }}</div>
                {% if invitation.venue_address.startswith('http') %}
                        <a href="{{ invitation.venue_address }}" target="_blank" class="maps-btn">
                            <i class="fas fa-map-marked-alt me-2"></i>View on Maps
                        </a>
                    {% else %}
                        <a href="https://maps.google.com/?q={{ invitation.venue_address }}" target="_blank" class="maps-btn">
                            <i class="fas fa-map-marked-alt me-2"></i>View on Maps
                        </a>
                    {% endif %}
                    <i class="fas fa-map-marker-alt"></i> Petunjuk Arah
                </a>
            </div>
        </section>

        <!-- RSVP Section -->
        <section class="rsvp-section slide-in">
            <h2 class="section-title">RSVP</h2>

            <form class="rsvp-form" method="POST" action="{{ url_for('rsvp_wedding', invitation_id=invitation.id) }}">
                <div class="form-field">
                    <label class="field-label">Nama Lengkap</label>
                    <input type="text" name="name" class="field-input" required>
                </div>

                <div class="form-field">
                    <label class="field-label">Nomor WhatsApp</label>
                    <input type="text" name="phone" class="field-input">
                </div>

                <div class="form-field">
                    <label class="field-label">Konfirmasi Kehadiran</label>
                    <select name="attendance" class="field-input" required>
                        <option value="">Pilih konfirmasi</option>
                        <option value="hadir">Hadir</option>
                        <option value="tidak_hadir">Tidak Dapat Hadir</option>
                    </select>
                </div>

                <div class="form-field">
                    <label class="field-label">Jumlah Tamu</label>
                    <select name="guest_count" class="field-input">
                        <option value="1">1 Orang</option>
                        <option value="2">2 Orang</option>
                    </select>
                </div>

                <div class="form-field">
                    <label class="field-label">Ucapan & Doa</label>
                    <textarea name="wishes" class="field-input" rows="4" placeholder="Berikan ucapan dan doa untuk kami..."></textarea>
                </div>

                <button type="submit" class="submit-btn">Kirim RSVP</button>
            </form>
        </section>

        <!-- Gift Section -->
        <section class="gift-section slide-in">
            <h2 class="section-title">Wedding Gift</h2>
            <div class="gift-intro">
                <p>Kehadiran dan doa restu Anda adalah anugerah terindah bagi kami.<br>Jika ingin memberikan kado, Anda dapat mengirimkannya melalui:</p>
            </div>

            <div class="payment-options">
                {% if invitation.bank_name and invitation.bank_account %}
                <div class="payment-option">
                    <h4><i class="fas fa-university"></i> {{ invitation.bank_name }}</h4>
                    <div class="account-details">{{ invitation.bank_account }}</div>
                    <p style="color: #5a7c3a;">a.n. {{ invitation.account_holder or invitation.bride_name }}</p>
                </div>
                {% endif %}

                {% if invitation.qris_code %}
                <div class="payment-option">
                    <h4><i class="fas fa-qrcode"></i> Pembayaran Digital</h4>
                    <img src="data:image/png;base64,{{ invitation.qris_code }}" class="qr-code-img" alt="QRIS Code">
                </div>
                {% endif %}
            </div>
        </section>
    </div>

    <script>
        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.slide-in').forEach(el => {
            observer.observe(el);
        });

        // Music functionality
        const audio = document.getElementById('backgroundMusic');
        let isPlaying = false;
        
        if (audio) {
            audio.volume = 0.3;
            
            // Try autoplay on load
            audio.play().then(() => {
                isPlaying = true;
                console.log('Music autoplaying');
            }).catch(() => {
                console.log('Autoplay blocked, waiting for user interaction');
            });

            // Auto-play attempt after any user interaction
            const startMusic = () => {
                if (!isPlaying && audio.src) {
                    audio.play().then(() => {
                        isPlaying = true;
                        console.log('Music started after user interaction');
                    }).catch(console.error);
                }
            };

            // Try on multiple interaction types
            document.addEventListener('click', startMusic, { once: true });
            document.addEventListener('touchstart', startMusic, { once: true });
            document.addEventListener('scroll', startMusic, { once: true });

            // Handle audio events
            audio.addEventListener('play', () => {
                isPlaying = true;
            });

            audio.addEventListener('pause', () => {
                isPlaying = false;
            });

            audio.addEventListener('loadeddata', function() {
                console.log('Audio loaded successfully');
                if (!isPlaying) {
                    audio.play().catch(() => {});
                }
            });
        }
    </script>
</div>
<script>

        // Open invitation function
        function openInvitation() {
            const coverPage = document.getElementById('coverPage');
            const mainContent = document.getElementById('mainContent');
            const music = document.getElementById('backgroundMusic');

            coverPage.style.transition = 'opacity 1s ease-out';
            coverPage.style.opacity = '0';

            setTimeout(() => {
                coverPage.style.display = 'none';
                mainContent.style.display = 'block';
                mainContent.style.opacity = '0';

                setTimeout(() => {
                    mainContent.style.transition = 'opacity 1s ease-in';
                    mainContent.style.opacity = '1';
                }, 100);

                // Play background music
                if (music) {
                    music.play().catch(e => console.log('Audio play failed:', e));
                }

                // Start countdown if wedding date exists
                {% if invitation.wedding_date %}
                startCountdown();
                {% endif %}
            }, 1000);
        }

        // Countdown function
        {% if invitation.wedding_date %}
        function startCountdown() {
            const weddingDate = new Date("{{ invitation.wedding_date.strftime('%Y-%m-%d') if invitation.wedding_date.__class__.__name__ == 'datetime' else invitation.wedding_date }}").getTime();

            function updateCountdown() {
                const now = new Date().getTime();
                const distance = weddingDate - now;

                if (distance > 0) {
                    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                    document.getElementById('days').innerText = days.toString().padStart(2, '0');
                    document.getElementById('hours').innerText = hours.toString().padStart(2, '0');
                    document.getElementById('minutes').innerText = minutes.toString().padStart(2, '0');
                    document.getElementById('seconds').innerText = seconds.toString().padStart(2, '0');
                } else {
                    document.getElementById('countdownTimer').innerHTML = 
                        '<div class="text-center"><h3 style="color: #667eea;">Hari Bahagia Telah Tiba! ðŸŽ‰</h3></div>';
                }
            }

            updateCountdown();
            setInterval(updateCountdown, 1000);
        }
        {% endif %}

</script>
</body>
</html>