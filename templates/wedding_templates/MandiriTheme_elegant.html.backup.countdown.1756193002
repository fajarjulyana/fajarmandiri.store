
<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ invitation.bride_name }} & {{ invitation.groom_name }} - Wedding Invitation</title>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;1,400&family=Montserrat:wght@300;400;500;600;700&family=Alex+Brush&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-navy: #2C3E50;
            --gold: #D4AF37;
            --rose-gold: #E8B4B8;
            --cream: #FDF8F5;
            --white: #FFFFFF;
            --text-dark: #2C2C2C;
            --text-muted: #7D7D7D;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            line-height: 1.6;
            background: var(--white);
            overflow-x: hidden;
        }

        .wrapper {
            max-width: 414px;
            margin: 0 auto;
            background: white;
            min-height: 100vh;
            position: relative;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        /* Cover Page */
        .cover-page {
            height: 100vh;
            background: linear-gradient(135deg, var(--primary-navy) 0%, #34495E 100%);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .cover-page::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 60 60"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="60" height="60" fill="url(%23dots)"/></svg>');
        }

        .cover-ornament {
            font-size: 4rem;
            color: var(--gold);
            margin-bottom: 40px;
            z-index: 2;
            position: relative;
            animation: glow 2s ease-in-out infinite alternate;
        }

        @keyframes glow {
            from { text-shadow: 0 0 20px var(--gold); }
            to { text-shadow: 0 0 30px var(--gold), 0 0 40px var(--gold); }
        }

        .cover-names {
            font-family: 'Alex Brush', cursive;
            font-size: 4rem;
            margin-bottom: 30px;
            z-index: 2;
            position: relative;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

        .cover-date {
            font-size: 1.3rem;
            margin-bottom: 50px;
            z-index: 2;
            position: relative;
            font-weight: 300;
            letter-spacing: 1px;
        }

        .open-invitation {
            background: rgba(212, 175, 55, 0.2);
            border: 2px solid var(--gold);
            color: var(--gold);
            padding: 20px 50px;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.4s ease;
            z-index: 2;
            position: relative;
            backdrop-filter: blur(10px);
        }

        .open-invitation:hover {
            background: var(--gold);
            color: var(--primary-navy);
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(212, 175, 55, 0.4);
        }

        /* Main Invitation */
        .main-invitation {
            display: none;
        }

        .main-invitation.visible {
            display: block;
            animation: slideIn 0.8s ease-out;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Welcome Section */
        .welcome-section {
            background: var(--cream);
            padding: 80px 30px;
            text-align: center;
            position: relative;
        }

        .section-ornament {
            color: var(--gold);
            font-size: 3rem;
            margin-bottom: 40px;
        }

        .bismillah-text {
            font-family: 'Crimson Text', serif;
            font-size: 2rem;
            color: var(--gold);
            margin-bottom: 40px;
            font-weight: 600;
        }

        .welcome-text {
            font-size: 1.1rem;
            color: var(--text-dark);
            line-height: 1.8;
            margin-bottom: 40px;
            max-width: 350px;
            margin-left: auto;
            margin-right: auto;
        }

        .verse-container {
            background: white;
            padding: 35px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            border-top: 4px solid var(--gold);
            margin: 40px 0;
        }

        .verse-text {
            font-family: 'Crimson Text', serif;
            font-style: italic;
            font-size: 1.1rem;
            color: var(--text-dark);
            line-height: 1.7;
            margin-bottom: 15px;
        }

        .verse-reference {
            font-weight: 600;
            color: var(--gold);
            font-size: 0.9rem;
        }

        /* Couple Section */
        .couple-section {
            background: white;
            padding: 80px 30px;
        }

        .section-header {
            text-align: center;
            margin-bottom: 60px;
        }

        .section-title {
            font-family: 'Crimson Text', serif;
            font-size: 3rem;
            color: var(--primary-navy);
            margin-bottom: 20px;
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, transparent, var(--gold), transparent);
        }

        .section-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            font-weight: 300;
        }

        .couple-container {
            display: grid;
            gap: 50px;
        }

        .couple-card {
            background: var(--cream);
            padding: 50px 30px;
            border-radius: 25px;
            text-align: center;
            position: relative;
            border: 1px solid rgba(212, 175, 55, 0.2);
            transition: transform 0.3s ease;
        }

        .couple-card:hover {
            transform: translateY(-5px);
        }

        .couple-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, var(--gold), var(--rose-gold), var(--gold));
            border-radius: 25px 25px 0 0;
        }

        .couple-avatar {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--gold), var(--rose-gold));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            margin: 0 auto 30px;
        }

        .couple-name {
            font-family: 'Crimson Text', serif;
            font-size: 2.5rem;
            color: var(--primary-navy);
            margin-bottom: 20px;
            font-weight: 600;
        }

        .couple-parents {
            color: var(--text-dark);
            line-height: 1.8;
            font-size: 1rem;
        }

        .love-symbol {
            text-align: center;
            margin: 40px 0;
        }

        .heart-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, var(--gold), var(--rose-gold));
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            color: white;
            box-shadow: 0 10px 30px rgba(212, 175, 55, 0.3);
            animation: heartbeat 2s ease-in-out infinite;
        }

        @keyframes heartbeat {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        /* Event Section */
        .event-section {
            background: linear-gradient(135deg, var(--primary-navy), #34495E);
            color: white;
            padding: 80px 30px;
            text-align: center;
            position: relative;
        }

        .event-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="1" fill="white" opacity="0.1"/></svg>') repeat;
        }

        .event-container {
            position: relative;
            z-index: 2;
        }

        .event-icon {
            font-size: 4rem;
            color: var(--gold);
            margin-bottom: 40px;
        }

        .event-title {
            font-family: 'Crimson Text', serif;
            font-size: 2.8rem;
            margin-bottom: 30px;
            color: white;
        }

        .event-details {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 40px 30px;
            border-radius: 25px;
            margin-bottom: 40px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .event-date {
            font-size: 1.4rem;
            margin-bottom: 15px;
            font-weight: 500;
        }

        .event-time {
            font-size: 1.2rem;
            margin-bottom: 30px;
            color: var(--gold);
        }

        .event-venue {
            font-size: 1.3rem;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .event-address {
            font-size: 1rem;
            line-height: 1.6;
            opacity: 0.9;
        }

        .maps-button {
            background: var(--gold);
            color: var(--primary-navy);
            border: none;
            padding: 18px 40px;
            border-radius: 50px;
            font-size: 1rem;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }

        .maps-button:hover {
            background: #B8941F;
            color: var(--primary-navy);
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(212, 175, 55, 0.5);
        }

        /* RSVP Section */
        .rsvp-section {
            background: var(--cream);
            padding: 80px 30px;
        }

        .rsvp-form {
            background: white;
            padding: 50px 30px;
            border-radius: 25px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.1);
            border-top: 5px solid var(--gold);
        }

        .form-field {
            margin-bottom: 25px;
        }

        .form-input {
            width: 100%;
            padding: 20px 25px;
            border: 2px solid #E8E8E8;
            border-radius: 15px;
            font-size: 1rem;
            transition: all 0.3s ease;
            font-family: inherit;
            background: white;
        }

        .form-input:focus {
            outline: none;
            border-color: var(--gold);
            box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
        }

        .form-textarea {
            resize: vertical;
            min-height: 120px;
        }

        .submit-button {
            background: linear-gradient(135deg, var(--gold), #B8941F);
            color: white;
            border: none;
            padding: 20px 50px;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 600;
            width: 100%;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .submit-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(212, 175, 55, 0.4);
        }

        /* Footer */
        .footer-section {
            background: var(--primary-navy);
            color: white;
            padding: 80px 30px;
            text-align: center;
        }

        .footer-ornament {
            font-size: 3rem;
            color: var(--gold);
            margin-bottom: 40px;
        }

        .footer-message {
            font-size: 1.1rem;
            line-height: 1.8;
            max-width: 350px;
            margin: 0 auto;
            opacity: 0.9;
        }

        /* Music Player */
        .music-player {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 65px;
            height: 65px;
            background: var(--gold);
            border: none;
            border-radius: 50%;
            color: var(--primary-navy);
            font-size: 1.5rem;
            cursor: pointer;
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
            z-index: 1000;
            transition: all 0.3s ease;
        }

        .music-player:hover {
            transform: scale(1.1);
        }

        .music-player.playing {
            animation: spin 3s linear infinite;
        }

        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* Scroll Animation */
        .animate-on-scroll {
            opacity: 0;
            transform: translateY(50px);
            transition: all 0.8s ease;
        }

        .animate-on-scroll.animated {
            opacity: 1;
            transform: translateY(0);
        }

        /* Mobile Responsive */
        @media (max-width: 480px) {
            .cover-names {
                font-size: 3.2rem;
            }
            
            .section-title {
                font-size: 2.5rem;
            }
            
            .couple-name {
                font-size: 2rem;
            }
            
            .event-title {
                font-size: 2.2rem;
            }
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- Cover Page -->
        <section class="cover-page" id="coverPage">
            <div class="cover-ornament">
                <i class="fas fa-crown"></i>
            </div>
            <h1 class="cover-names">{{ invitation.couple_name }}</h1>
            <p class="cover-date">
                {% if invitation.wedding_date %}
                    {{ invitation.wedding_date.strftime('%d %B %Y') }}
                {% endif %}
            </p>
            <button class="open-invitation" onclick="openInvitation()">
                <i class="fas fa-envelope-open me-2"></i>Buka Undangan
            </button>
        </section>

        <!-- Main Invitation -->
        <div class="main-invitation" id="mainInvitation">
            <!-- Welcome Section -->
            <section class="welcome-section animate-on-scroll">
                <div class="section-ornament">
                    <i class="fas fa-mosque"></i>
                </div>
                <div class="bismillah-text">بِسْمِ اللَّهِ الرَّحْمَنِ الرَّحِيْمِ</div>
                <p class="welcome-text">
                    Assalamu'alaikum Warahmatullahi Wabarakatuh
                    <br><br>
                    Dengan memohon rahmat dan ridho Allah SWT, kami bermaksud menyelenggarakan resepsi pernikahan putra-putri kami.
                </p>
                
                <div class="verse-container">
                    <p class="verse-text">
                        "Dan di antara tanda-tanda (kebesaran)-Nya ialah Dia menciptakan pasangan-pasangan untukmu dari jenismu sendiri, agar kamu cenderung dan merasa tenteram kepadanya."
                    </p>
                    <div class="verse-reference">QS. Ar-Rum: 21</div>
                </div>
            </section>

            <!-- Couple Section -->
            <section class="couple-section animate-on-scroll">
                <div class="section-header">
                    <h2 class="section-title">Mempelai</h2>
                    <p class="section-subtitle">Dua hati yang bersatu dalam kasih</p>
                </div>
                
                <div class="couple-container">
                    <div class="couple-card">
                        <div class="couple-avatar">
                            <i class="fas fa-male"></i>
                        </div>
                        <h3 class="couple-name">{{ invitation.groom_name }}</h3>
                        <div class="couple-parents">
                            Putra dari<br>
                            <strong>{{ invitation.groom_father }}</strong><br>
                            &<br>
                            <strong>{{ invitation.groom_mother }}</strong>
                        </div>
                    </div>

                    <div class="love-symbol">
                        <div class="heart-icon">
                            <i class="fas fa-heart"></i>
                        </div>
                    </div>

                    <div class="couple-card">
                        <div class="couple-avatar">
                            <i class="fas fa-female"></i>
                        </div>
                        <h3 class="couple-name">{{ invitation.bride_name }}</h3>
                        <div class="couple-parents">
                            Putri dari<br>
                            <strong>{{ invitation.bride_father }}</strong><br>
                            &<br>
                            <strong>{{ invitation.bride_mother }}</strong>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Event Section -->
            <section class="event-section animate-on-scroll">
                <div class="event-container">
                    <div class="event-icon">
                        <i class="fas fa-calendar-heart"></i>
                    </div>
                    <h2 class="event-title">Akad & Resepsi</h2>
                    
                    <div class="event-details">
                        {% if invitation.wedding_date %}
                            <div class="event-date">{{ invitation.wedding_date.strftime('%A, %d %B %Y') }}</div>
                        {% endif %}
                        {% if invitation.wedding_time %}
                            <div class="event-time">Pukul {{ invitation.wedding_time }} WIB</div>
                        {% endif %}
                        <div class="event-venue">{{ invitation.venue_name or 'Venue Pernikahan' }}</div>
                        <div class="event-address">{{ invitation.venue_address }}</div>
                    </div>
                    
                    {% if invitation.venue_address.startswith('http') %}
                        <a href="{{ invitation.venue_address }}" target="_blank" class="maps-btn">
                            <i class="fas fa-map-marked-alt me-2"></i>View on Maps
                        </a>
                    {% else %}
                        <a href="https://maps.google.com/?q={{ invitation.venue_address }}" target="_blank" class="maps-btn">
                            <i class="fas fa-map-marked-alt me-2"></i>View on Maps
                        </a>
                    {% endif %}
                        <i class="fas fa-location-dot me-2"></i>Lihat Lokasi
                    </a>
                </div>
            </section>

            <!-- RSVP Section -->
            <section class="rsvp-section animate-on-scroll">
                <div class="section-header">
                    <h2 class="section-title">Konfirmasi Kehadiran</h2>
                    <p class="section-subtitle">Mohon konfirmasi kehadiran Anda</p>
                </div>
                
                <form method="POST" action="{{ url_for('rsvp_wedding', invitation_id=invitation.id) }}" class="rsvp-form">
                    <div class="form-field">
                        <input type="text" class="form-input" name="name" placeholder="Nama Lengkap" required>
                    </div>
                    <div class="form-field">
                        <input type="tel" class="form-input" name="phone" placeholder="Nomor WhatsApp">
                    </div>
                    <div class="form-field">
                        <select class="form-input" name="attendance" required>
                            <option value="">Konfirmasi Kehadiran</option>
                            <option value="hadir">Ya, Saya Akan Hadir</option>
                            <option value="tidak_hadir">Maaf, Saya Tidak Dapat Hadir</option>
                        </select>
                    </div>
                    <div class="form-field">
                        <input type="number" class="form-input" name="guest_count" placeholder="Jumlah Tamu" min="1" value="1">
                    </div>
                    <div class="form-field">
                        <textarea class="form-input form-textarea" name="wishes" placeholder="Ucapan & Doa untuk Mempelai"></textarea>
                    </div>
                    <button type="submit" class="submit-button">
                        <i class="fas fa-paper-plane me-2"></i>Kirim Konfirmasi
                    </button>
                </form>
            </section>

            <!-- Footer Section -->
            <section class="footer-section">
                <div class="footer-ornament">
                    <i class="fas fa-heart"></i>
                </div>
                <p class="footer-message">
                    Merupakan suatu kehormatan dan kebahagiaan bagi kami apabila Bapak/Ibu/Saudara/i berkenan hadir untuk memberikan doa restu kepada kedua mempelai.
                    <br><br>
                    Wassalamu'alaikum Warahmatullahi Wabarakatuh
                    <br><br>
                    <strong>{{ invitation.couple_name }}</strong>
                </p>
            </section>
        </div>
    </div>

    <!-- Music Player -->
    <button class="music-player" id="musicPlayer" onclick="toggleMusic()">
        <i class="fas fa-music"></i>
    </button>

    <!-- Background Audio -->
    {% if invitation.background_music %}
    <audio id="backgroundMusic" loop>
        <source src="{{ url_for('static', filename='music/' + invitation.background_music) }}" type="audio/mpeg">
    </audio>
    {% endif %}

    <script>
        let isPlaying = false;

        function openInvitation() {
            document.getElementById('coverPage').style.display = 'none';
            document.getElementById('mainInvitation').classList.add('visible');
            
            // Initialize scroll animations
            initScrollAnimations();
            
            // Auto play music
            {% if invitation.background_music %}
            const audio = document.getElementById('backgroundMusic');
            audio.play().then(() => {
                isPlaying = true;
                document.getElementById('musicPlayer').classList.add('playing');
            }).catch(() => {
                console.log('Autoplay prevented');
            });
            {% endif %}
        }

        function toggleMusic() {
            {% if invitation.background_music %}
            const audio = document.getElementById('backgroundMusic');
            const player = document.getElementById('musicPlayer');
            
            if (isPlaying) {
                audio.pause();
                player.classList.remove('playing');
                isPlaying = false;
            } else {
                audio.play().then(() => {
                    player.classList.add('playing');
                    isPlaying = true;
                }).catch(console.error);
            }
            {% endif %}
        }

        function initScrollAnimations() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animated');
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -100px 0px'
            });

            document.querySelectorAll('.animate-on-scroll').forEach(el => {
                observer.observe(el);
            });
        }
    </script>
</body>
</html>
