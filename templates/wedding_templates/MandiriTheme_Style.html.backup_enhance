    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Cover page functionality
        function openInvitation() {
            document.getElementById('coverPage').style.display = 'none';
            document.getElementById('mainContent').style.display = 'block';
            document.getElementById('loadingScreen').style.display = 'block'; // Show loading screen

            // Start music immediately when invitation is opened
            const audio = document.getElementById('backgroundMusic');
            const musicToggle = document.getElementById('musicToggle');
            const musicIcon = document.getElementById('musicIcon');

            if (audio && musicToggle) {
                audio.volume = 0.3; // Set volume
                audio.play().then(() => {
                    musicToggle.classList.add('playing');
                    musicIcon.className = 'fas fa-pause';
                    console.log('Music started after opening invitation');
                }).catch(console.error);
            }

            // Trigger animations after a short delay
            setTimeout(() => {
                document.getElementById('loadingScreen').style.opacity = '0';
                setTimeout(() => {
                    document.getElementById('loadingScreen').style.display = 'none';

                    // Trigger animations for the main content
                    document.querySelectorAll('.fade-in').forEach(el => {
                        el.classList.add('visible');
                    });
                }, 500); // Match the loading screen transition duration
            }, 100); // Delay to allow cover page to disappear smoothly
        }

        // Countdown functionality
        function updateCountdown() {
            const weddingDate = new Date("{{ invitation.wedding_date.strftime('%Y-%m-%d %H:%M:%S') if invitation.wedding_date else '' }}").getTime(); // Ensure correct date format
            const now = new Date().getTime();
            const distance = weddingDate - now;

            if (isNaN(weddingDate)) {
                console.error("Invalid wedding date provided.");
                return;
            }

            if (distance < 0) {
                document.getElementById("countdown").style.display = "none";
                return;
            }

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById("days").innerText = String(days).padStart(2, '0');
            document.getElementById("hours").innerText = String(hours).padStart(2, '0');
            document.getElementById("minutes").innerText = String(minutes).padStart(2, '0');
            document.getElementById("seconds").innerText = String(seconds).padStart(2, '0');
        }

        // Check if wedding_date exists before setting up interval
        {% if invitation.wedding_date %}
            // Update the countdown every second
            const countdownInterval = setInterval(updateCountdown, 1000);
            // Initial call to display the countdown immediately
            updateCountdown();
        {% endif %}

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Music functionality
        let isPlaying = false;
        const audio = document.getElementById('backgroundMusic');
        const musicToggle = document.getElementById('musicToggle');
        const musicIcon = document.getElementById('musicIcon');

        if (audio && musicToggle) {
            // Volume is set in openInvitation now

            // Autoplay attempt is also handled in openInvitation
            
            musicToggle.addEventListener('click', function() {
                if (isPlaying) {
                    audio.pause();
                    musicIcon.className = 'fas fa-music';
                    musicToggle.classList.remove('playing');
                } else {
                    audio.play().catch(console.error);
                    musicIcon.className = 'fas fa-pause';
                    musicToggle.classList.add('playing');
                }
                isPlaying = !isPlaying;
            });

            // Handle audio events to keep UI in sync
            audio.addEventListener('play', () => {
                isPlaying = true;
                musicIcon.className = 'fas fa-pause';
                musicToggle.classList.add('playing');
            });

            audio.addEventListener('pause', () => {
                isPlaying = false;
                musicIcon.className = 'fas fa-music';
                musicToggle.classList.remove('playing');
            });

            audio.addEventListener('error', function(e) {
                console.log('Audio error:', e);
                musicToggle.style.display = 'none'; // Hide music button if there's an error
            });
        }

        // Photo modal functionality
        function openModal(imageSrc) {
            const modal = new bootstrap.Modal(document.getElementById('photoModal'));
            document.getElementById('modalImage').src = imageSrc;
            modal.show();
        }

        // Copy bank account function
        function copyBankAccount(text) {
            navigator.clipboard.writeText(text).then(function() {
                alert('Nomor rekening berhasil disalin!');
            }).catch(function() {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                try {
                    document.execCommand('copy');
                    alert('Nomor rekening berhasil disalin!');
                } catch (err) {
                    alert('Gagal menyalin nomor rekening. Silakan salin manual.');
                }
                document.body.removeChild(textArea);
            });
        }

        // Form submission
        document.querySelector('.rsvp-form').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('.btn-rsvp');
            const originalText = submitBtn.innerHTML;

            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Mengirim...';
            submitBtn.disabled = true;

            setTimeout(() => {
                if (submitBtn) {
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }
            }, 3000);
        });

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>

        <!-- Photo Gallery Section -->
    {% if prewedding_photos and prewedding_photos|length > 0 %}
    <section class="gallery-section">
        <div class="gallery-container">
            <div class="gallery-header">
                <h2 class="gallery-title">Galeri</h2>
            </div>
            
            <!-- Portrait Photos -->
            <div class="gallery-portrait-section">
                <h3 class="gallery-portrait-title">Foto Portrait</h3>
                <div class="gallery-portrait-grid">
                    <!-- Portrait photos will be sorted here by JavaScript -->
                </div>
            </div>
            
            <!-- Landscape Photos -->
            <div class="gallery-landscape-section">
                <h3 class="gallery-landscape-title">Foto Landscape</h3>
                <div class="gallery-landscape-grid">
                    <!-- Landscape photos will be sorted here by JavaScript -->
                </div>
            </div>
            
            <!-- Original items for sorting -->
            <div class="original-gallery-items" style="display: none;">
                {% for photo in prewedding_photos %}
                <div class="gallery-item">
                    <img src="{{ url_for('static', filename='prewedding_photos/' + photo) }}" 
                         alt="Galeri Foto {{ loop.index }}" 
                         loading="lazy">
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    
    <!-- Gallery sorting script -->
    <script src="{{ url_for('static', filename='js/gallery-sort.js') }}"></script>
    {% endif %}
        

    <!-- Photo Modal -->
    <div class="modal" id="photoModal">
        <span class="close-button" >&times;</span>
        <div class="modal-content">
            <img id="modalImage" src="" alt="Gallery Photo">
        </div>
    </div>
    

<script>
// Gallery Modal Functions
function openModal(imageSrc) {
    const modal = document.getElementById('photoModal');
    const modalImage = document.getElementById('modalImage');
    
    modal.style.display = 'block';
    modalImage.src = imageSrc;
    
    // Prevent body scroll
    document.body.style.overflow = 'hidden';
}

function closeModal() {
    const modal = document.getElementById('photoModal');
    modal.style.display = 'none';
    
    // Restore body scroll
    document.body.style.overflow = 'auto';
}

// Close modal when clicking outside the image
document.getElementById('photoModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeModal();
    }
});

// Close modal with Escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        closeModal();
    }
});

// Smooth scroll for navigation links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }
    });
});
</script>

    <script>
    // Mobile fullscreen optimization
    document.addEventListener('DOMContentLoaded', function() {
        // Remove all photo gallery click events
        const galleryItems = document.querySelectorAll('.gallery-item');
        galleryItems.forEach(item => {
            item.removeAttribute('onclick');
            item.style.cursor = 'default';
            const img = item.querySelector('img');
            if (img) {
                img.removeAttribute('onclick');
                img.style.pointerEvents = 'none';
            }
        });
        
        // Remove modal functionality
        const modals = document.querySelectorAll('.modal');
        modals.forEach(modal => {
            modal.style.display = 'none';
        });
        
        // Hide overlay buttons
        const overlays = document.querySelectorAll('.gallery-overlay');
        overlays.forEach(overlay => {
            overlay.style.display = 'none';
        });
        
        // Mobile viewport height fix
        function setViewportHeight() {
            document.documentElement.style.setProperty('--vh', window.innerHeight * 0.01 + 'px');
        }
        
        setViewportHeight();
        window.addEventListener('resize', setViewportHeight);
        window.addEventListener('orientationchange', setViewportHeight);
        
        // Prevent zoom on form focus (iOS)
        const inputs = document.querySelectorAll('input, textarea, select');
        inputs.forEach(input => {
            if (input.style.fontSize === '' || parseFloat(input.style.fontSize) < 16) {
                input.style.fontSize = '16px';
            }
        });
    });
    
    // Override photo modal functions
    function openModal() { return false; }
    function closeModal() { return false; }
    function openPhotoModal() { return false; }
    </script>

    <script>
    // Auto Fullscreen Optimization
    document.addEventListener('DOMContentLoaded', function() {
        // Set viewport for mobile
        let viewport = document.querySelector('meta[name="viewport"]');
        if (viewport) {
            viewport.setAttribute('content', 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover');
        } else {
            const meta = document.createElement('meta');
            meta.name = 'viewport';
            meta.content = 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover';
            document.head.appendChild(meta);
        }

        // Mobile optimizations
        function mobileOptimizations() {
            // Set viewport height
            function setVH() {
                document.documentElement.style.setProperty('--vh', window.innerHeight * 0.01 + 'px');
            }
            setVH();
            window.addEventListener('resize', setVH);
            window.addEventListener('orientationchange', () => {
                setTimeout(setVH, 500);
            });

            // Hide address bar
            setTimeout(() => {
                window.scrollTo(0, 1);
                setTimeout(() => window.scrollTo(0, 0), 100);
            }, 100);

            // Prevent zoom on form inputs (iOS)
            const inputs = document.querySelectorAll('input, textarea, select');
            inputs.forEach(input => {
                if (!input.style.fontSize || parseFloat(input.style.fontSize) < 16) {
                    input.style.fontSize = '16px';
                }
            });
        }

        // Auto fullscreen request
        function requestFullscreen() {
            const elem = document.documentElement;
            if (elem.requestFullscreen) {
                elem.requestFullscreen().catch(() => {});
            } else if (elem.webkitRequestFullscreen) {
                elem.webkitRequestFullscreen().catch(() => {});
            } else if (elem.mozRequestFullScreen) {
                elem.mozRequestFullScreen().catch(() => {});
            } else if (elem.msRequestFullscreen) {
                elem.msRequestFullscreen().catch(() => {});
            }
        }

        // Initialize
        mobileOptimizations();

        // Request fullscreen on first interaction
        let fullscreenRequested = false;
        const onFirstInteraction = () => {
            if (!fullscreenRequested) {
                requestFullscreen();
                fullscreenRequested = true;
            }
        };

        document.addEventListener('click', onFirstInteraction, { once: true });
        document.addEventListener('touchstart', onFirstInteraction, { once: true });

        // iOS Safari specific
        if (/iPad|iPhone|iPod/.test(navigator.userAgent)) {
            // Add apple meta tags
            const appleMeta1 = document.createElement('meta');
            appleMeta1.name = 'apple-mobile-web-app-capable';
            appleMeta1.content = 'yes';
            document.head.appendChild(appleMeta1);

            const appleMeta2 = document.createElement('meta');
            appleMeta2.name = 'apple-mobile-web-app-status-bar-style';
            appleMeta2.content = 'black-translucent';
            document.head.appendChild(appleMeta2);

            // Prevent bounce scrolling
            document.addEventListener('touchmove', (e) => {
                if (!e.target.closest('textarea, input, select, [data-scroll="true"]')) {
                    e.preventDefault();
                }
            }, { passive: false });
        }
    });
    </script>
    


<script>
// Enhanced Gallery Animations and Responsive Behavior
document.addEventListener('DOMContentLoaded', function() {
    // Initialize gallery animations
    initializeGalleryAnimations();
    
    // Remove all photo modal functionality
    disablePhotoModals();
    
    // Setup responsive behavior
    setupResponsiveBehavior();
});

function initializeGalleryAnimations() {
    // Setup intersection observer for gallery animations
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
            }
        });
    }, observerOptions);

    // Observe gallery items
    document.querySelectorAll('.gallery-fade-in').forEach(el => {
        observer.observe(el);
    });
    
    // Stagger animation for gallery items
    const galleryItems = document.querySelectorAll('.gallery-item');
    galleryItems.forEach((item, index) => {
        item.style.animationDelay = `${index * 0.1}s`;
        item.classList.add('gallery-fade-in');
    });
}

function disablePhotoModals() {
    // Remove all photo gallery click events and modal functionality
    const galleryItems = document.querySelectorAll('.gallery-item');
    galleryItems.forEach(item => {
        item.removeAttribute('onclick');
        item.style.cursor = 'default';
        const img = item.querySelector('img');
        if (img) {
            img.removeAttribute('onclick');
            img.style.pointerEvents = 'none';
        }
    });
    
    // Hide all modals
    const modals = document.querySelectorAll('.modal, .photo-modal, #photoModal');
    modals.forEach(modal => {
        modal.style.display = 'none';
        modal.remove();
    });
    
    // Hide overlay buttons
    const overlays = document.querySelectorAll('.gallery-overlay');
    overlays.forEach(overlay => {
        overlay.style.display = 'none';
    });
}

function setupResponsiveBehavior() {
    // Mobile viewport height fix
    function setViewportHeight() {
        document.documentElement.style.setProperty('--vh', window.innerHeight * 0.01 + 'px');
    }
    
    setViewportHeight();
    window.addEventListener('resize', setViewportHeight);
    window.addEventListener('orientationchange', () => {
        setTimeout(setViewportHeight, 500);
    });
    
    // Optimize for touch devices
    if ('ontouchstart' in window) {
        document.body.classList.add('touch-device');
    }
    
    // Prevent zoom on form focus (iOS)
    const inputs = document.querySelectorAll('input, textarea, select');
    inputs.forEach(input => {
        if (!input.style.fontSize || parseFloat(input.style.fontSize) < 16) {
            input.style.fontSize = '16px';
        }
    });
}

// Override any existing photo modal functions
function openModal() { return false; }
function closeModal() { return false; }
function openPhotoModal() { return false; }
function closePhotoModal() { return false; }
</script>



<script>
// Gallery Photo Sorting and Animation
document.addEventListener('DOMContentLoaded', function() {
    initializeGallerySorting();
    initializeGalleryAnimations();
});

function initializeGallerySorting() {
    // Sort photos by aspect ratio (portrait vs landscape)
    const galleryItems = document.querySelectorAll('.gallery-item');
    const portraitContainer = document.querySelector('.gallery-portrait-grid');
    const landscapeContainer = document.querySelector('.gallery-landscape-grid');
    
    if (!portraitContainer || !landscapeContainer) return;
    
    galleryItems.forEach(function(item) {
        const img = item.querySelector('img');
        if (!img) return;
        
        img.onload = function() {
            const aspectRatio = this.naturalWidth / this.naturalHeight;
            
            // Clone the item for new containers
            const newItem = item.cloneNode(true);
            
            if (aspectRatio < 1) {
                // Portrait
                newItem.className = 'gallery-portrait-item gallery-fade-in';
                portraitContainer.appendChild(newItem);
            } else {
                // Landscape or square
                newItem.className = 'gallery-landscape-item gallery-fade-in';
                landscapeContainer.appendChild(newItem);
            }
            
            // Remove original item
            item.remove();
        };
        
        // If image is already loaded
        if (img.complete) {
            img.onload();
        }
    });
}

function initializeGalleryAnimations() {
    // Setup intersection observer for animations
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
            }
        });
    }, observerOptions);

    // Observe gallery items with delay
    setTimeout(() => {
        document.querySelectorAll('.gallery-fade-in').forEach((el, index) => {
            el.style.animationDelay = `${index * 0.1}s`;
            observer.observe(el);
        });
    }, 500);
}

// Mobile viewport height fix
function setViewportHeight() {
    document.documentElement.style.setProperty('--vh', window.innerHeight * 0.01 + 'px');
}

setViewportHeight();
window.addEventListener('resize', setViewportHeight);
window.addEventListener('orientationchange', () => {
    setTimeout(setViewportHeight, 500);
});
</script>

</body>
</html>