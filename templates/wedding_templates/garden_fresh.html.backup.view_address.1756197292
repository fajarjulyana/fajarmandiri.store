<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ invitation.bride_name }} & {{ invitation.groom_name }} - Wedding Invitation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&family=Dancing+Script:wght@400;500;600;700&family=Open+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-green: #4A7C59;
            --primary-white: #FFFFFF;
            --secondary-cream: #F8F9F0;
            --accent-sage: #87A96B;
            --text-dark: #2C3E2D;
            --text-light: #6B7C6B;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            background: linear-gradient(135deg, var(--secondary-cream) 0%, #FFFFFF 100%);
            color: var(--text-dark);
        }

        .invitation-container {
            max-width: 500px;
            margin: 0 auto;
            background: white;
            min-height: 100vh;
            position: relative;
            box-shadow: 0 0 30px rgba(0,0,0,0.1);
        }

        /* Leaf Pattern */
        .leaf-pattern {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%234A7C59' fill-opacity='0.05'%3E%3Cpath d='M20 20c-2.2 0-4-1.8-4-4 0-1.1.4-2.1 1.2-2.8C18 12.4 19 12 20 12s2 .4 2.8 1.2c.8.7 1.2 1.7 1.2 2.8 0 2.2-1.8 4-4 4z'/%3E%3C/g%3E%3C/svg%3E") repeat;
            pointer-events: none;
            z-index: 1;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--accent-sage) 100%);
            color: white;
            text-align: center;
            padding: 100px 40px;
            position: relative;
            z-index: 2;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Cpath d='M30 30c-3.3 0-6-2.7-6-6s2.7-6 6-6 6 2.7 6 6-2.7 6-6 6zm0-8c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
        }

        .leaf-ornament {
            color: var(--secondary-cream);
            font-size: 3rem;
            margin-bottom: 30px;
            position: relative;
            z-index: 3;
        }

        .couple-names-hero {
            font-family: 'Dancing Script', cursive;
            font-size: 3.5rem;
            font-weight: 600;
            margin-bottom: 20px;
            position: relative;
            z-index: 3;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .nature-subtitle {
            font-family: 'Merriweather', serif;
            font-size: 1.1rem;
            font-weight: 300;
            opacity: 0.9;
            position: relative;
            z-index: 3;
        }

        .wedding-date-hero {
            font-family: 'Open Sans', sans-serif;
            font-size: 1.2rem;
            margin-top: 15px;
            opacity: 0.95;
            position: relative;
            z-index: 3;
        }

        /* Content Sections */
        .content-section {
            padding: 80px 40px;
            position: relative;
            z-index: 2;
        }

        .section-title {
            font-family: 'Merriweather', serif;
            font-size: 2.2rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 50px;
            color: var(--primary-green);
            position: relative;
        }

        .section-title::after {
            content: 'ðŸŒ¿';
            position: absolute;
            bottom: -30px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 1.5rem;
        }

        /* Opening Section */
        .opening-section {
            background: var(--secondary-cream);
            text-align: center;
        }

        .opening-text {
            line-height: 1.8;
            font-size: 1.1rem;
            color: var(--text-dark);
            margin-bottom: 40px;
        }

        .nature-quote {
            background: white;
            padding: 35px;
            border-radius: 20px;
            border-left: 5px solid var(--primary-green);
            font-style: italic;
            color: var(--text-dark);
            margin: 40px 0;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            position: relative;
        }

        .nature-quote::before {
            content: 'ðŸŒ±';
            position: absolute;
            top: -15px;
            left: 30px;
            background: white;
            padding: 0 10px;
            font-size: 1.5rem;
        }

        /* Couple Section */
        .couple-section {
            background: white;
        }

        .couple-card {
            background: var(--secondary-cream);
            border-radius: 25px;
            padding: 40px;
            text-align: center;
            margin-bottom: 30px;
            border: 2px solid #E8F5E8;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .couple-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, var(--accent-sage) 0%, transparent 70%);
            opacity: 0.1;
            z-index: 1;
        }

        .couple-content {
            position: relative;
            z-index: 2;
        }

        .nature-icon {
            width: 70px;
            height: 70px;
            background: var(--primary-green);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            color: white;
            font-size: 2rem;
            box-shadow: 0 5px 15px rgba(74, 124, 89, 0.3);
        }

        .couple-name {
            font-family: 'Dancing Script', cursive;
            font-size: 2.5rem;
            font-weight: 600;
            color: var(--primary-green);
            margin-bottom: 15px;
        }

        .couple-parents {
            color: var(--text-light);
            line-height: 1.6;
            font-size: 1rem;
        }

        /* Botanical Divider */
        .botanical-divider {
            text-align: center;
            margin: 40px 0;
            font-size: 2rem;
            color: var(--accent-sage);
        }

        /* Event Section */
        .event-section {
            background: var(--secondary-cream);
        }

        .event-card {
            background: white;
            border-radius: 25px;
            padding: 40px;
            text-align: center;
            border: 2px solid #E8F5E8;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .date-flower {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, var(--primary-green), var(--accent-sage));
            border-radius: 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            color: white;
            box-shadow: 0 8px 25px rgba(74, 124, 89, 0.3);
            position: relative;
        }

        .date-flower::before {
            content: 'ðŸŒ¸';
            position: absolute;
            top: -10px;
            right: -10px;
            font-size: 1.5rem;
        }

        .date-number {
            font-family: 'Merriweather', serif;
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1;
        }

        .date-month {
            font-size: 0.9rem;
            margin-top: 5px;
            opacity: 0.9;
        }

        .venue-name {
            font-family: 'Merriweather', serif;
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary-green);
            margin-bottom: 15px;
        }

        .venue-address {
            color: var(--text-dark);
            line-height: 1.6;
            margin-bottom: 20px;
            font-size: 1rem;
        }

        .venue-time {
            color: var(--text-light);
            font-size: 1rem;
            margin-bottom: 25px;
        }

        .nature-btn {
            background: var(--primary-green);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 500;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(74, 124, 89, 0.3);
        }

        .nature-btn:hover {
            background: var(--accent-sage);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(74, 124, 89, 0.4);
        }

        /* RSVP Section */
        .rsvp-section {
            background: white;
        }

        .rsvp-form {
            max-width: 400px;
            margin: 0 auto;
        }

        .form-control {
            border: 2px solid #E8F5E8;
            border-radius: 15px;
            padding: 15px 20px;
            margin-bottom: 20px;
            background: var(--secondary-cream);
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--primary-green);
            background: white;
            box-shadow: 0 0 0 3px rgba(74, 124, 89, 0.1);
        }

        .btn-rsvp {
            background: var(--primary-green);
            border: none;
            color: white;
            padding: 15px 40px;
            border-radius: 25px;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(74, 124, 89, 0.3);
        }

        .btn-rsvp:hover {
            background: var(--accent-sage);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(74, 124, 89, 0.4);
        }

        /* Gallery Section */
        .gallery-section {
            background: var(--secondary-cream);
            padding-top: 80px;
            padding-bottom: 80px;
        }

        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 15px;
        }

        .gallery-item {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .gallery-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(74, 124, 89, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            opacity: 0;
            transition: all 0.3s ease;
        }

        .gallery-item:hover .gallery-overlay {
            opacity: 1;
        }

        /* Floating Music Button */
        .floating-music {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: var(--primary-green);
            color: white;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 15px rgba(74, 124, 89, 0.4);
            cursor: pointer;
            z-index: 1000;
            animation: pulse 1.5s infinite;
            transition: background 0.3s ease;
        }

        .floating-music:hover {
            background: var(--accent-sage);
        }

        .floating-music i {
            font-size: 1.8rem;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 1;
            }
            50% {
                transform: scale(1.1);
                opacity: 0.9;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        /* Footer */
        .footer-section {
            background: linear-gradient(135deg, var(--primary-green), var(--accent-sage));
            color: white;
            text-align: center;
            padding: 60px 40px;
            position: relative;
            z-index: 2;
        }

        .footer-leaves {
            color: var(--secondary-cream);
            font-size: 2.5rem;
            margin-bottom: 25px;
        }

        /* Animations */
        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s ease;
        }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Cover Page Styles */
        .cover-page {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--accent-sage) 100%);
            color: white;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .cover-page::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Cpath d='M30 30c-3.3 0-6-2.7-6-6s2.7-6 6-6 6 2.7 6 6-2.7 6-6 6zm0-8c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
            opacity: 0.5;
        }

        .cover-content {
            position: relative;
            z-index: 2;
            padding: 20px;
        }

        .couple-initials {
            font-size: 3.5rem;
            font-family: 'Dancing Script', cursive;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .couple-initials i {
            margin: 0 20px;
            color: var(--secondary-cream);
            font-size: 2.5rem;
        }

        .couple-names {
            font-size: 3.5rem;
            font-family: 'Dancing Script', cursive;
            font-weight: 600;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .wedding-date {
            font-size: 1.2rem;
            font-weight: 300;
            opacity: 0.9;
            margin-bottom: 40px;
        }

        .open-invitation-btn {background: #22C55E;
            color: #FFFFFF;
            border: none;
            padding: 15px 35px;
            border-radius: 30px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            display: inline-flex;
            align-items: center;
        }

        .open-invitation-btn:hover {background: #16A34A;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(74, 124, 89, 0.4);
        }

        /* Countdown Timer Styles */
        .countdown-section {background: rgba(34, 197, 94, 0.1);
            text-align: center;
            padding: 60px 40px;
        }

        .countdown-timer {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        .countdown-timer div {
            display: flex;
            flex-direction: column;
            align-items: center;
            font-family: 'Merriweather', serif;
        }

        .countdown-timer span {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--primary-green);
        }

        .countdown-timer p {
            font-size: 0.9rem;
            color: var(--text-light);
            margin-top: 5px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .couple-names-hero {
                font-size: 2.8rem;
            }

            .section-title {
                font-size: 1.8rem;
            }

            .couple-name {
                font-size: 2rem;
            }

            .content-section {
                padding: 60px 30px;
            }

            .couple-card, .event-card {
                padding: 30px 25px;
            }

            .date-flower {
                width: 100px;
                height: 100px;
            }

            .date-number {
                font-size: 2rem;
            }

            .gallery-grid {
                grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
            }

            .floating-music {
                bottom: 20px;
                right: 20px;
                width: 50px;
                height: 50px;
            }

            .floating-music i {
                font-size: 1.5rem;
            }

            /* Cover Page Responsive */
            .cover-page {
                padding: 20px;
            }
            .couple-initials {
                font-size: 3rem;
            }
            .couple-initials i {
                font-size: 2rem;
                margin: 0 15px;
            }
            .couple-names {
                font-size: 3rem;
            }
            .wedding-date {
                font-size: 1rem;
            }
            .open-invitation-btn {
                padding: 12px 25px;
                font-size: 1rem;
            }
            .countdown-timer span {
                font-size: 2rem;
            }
            .countdown-timer p {
                font-size: 0.8rem;
            }
        }
    
/* Gallery Styles */
.gallery-section {
    padding: 80px 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-top: 50px;
}

.gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: 15px;
    cursor: pointer;
    aspect-ratio: 1;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
}

.gallery-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
}

.gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.gallery-item:hover img {
    transform: scale(1.1);
}

.gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.gallery-item:hover .gallery-overlay {
    opacity: 1;
}

.gallery-overlay i {
    color: white;
    font-size: 2rem;
}

/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 9999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.9);
    animation: fadeIn 0.3s ease;
}

.modal-content {
    position: relative;
    margin: auto;
    padding: 20px;
    width: 90%;
    max-width: 800px;
    top: 50%;
    transform: translateY(-50%);
}

.modal-content img {
    width: 100%;
    height: auto;
    border-radius: 10px;
}

.close-button {
    position: absolute;
    top: 20px;
    right: 35px;
    color: #fff;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
    z-index: 10000;
}

.close-button:hover {
    opacity: 0.7;
}

/* Events Timeline Styles */
.events-section {
    padding: 80px 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.events-timeline {
    margin-top: 50px;
    position: relative;
}

.events-timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 2px;
    background: rgba(255,255,255,0.3);
    transform: translateX(-50%);
}

.event-item {
    display: flex;
    align-items: center;
    margin-bottom: 50px;
    position: relative;
}

.event-item:nth-child(odd) {
    flex-direction: row;
}

.event-item:nth-child(even) {
    flex-direction: row-reverse;
}

.event-icon {
    width: 80px;
    height: 80px;
    background: rgba(255,255,255,0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin: 0 30px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255,255,255,0.3);
}

.event-content {
    flex: 1;
    max-width: 400px;
    background: rgba(255,255,255,0.1);
    padding: 30px;
    border-radius: 15px;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255,255,255,0.2);
}

.event-title {
    font-size: 1.5rem;
    margin-bottom: 20px;
    color: #fff;
}

.event-details p {
    margin-bottom: 10px;
    display: flex;
    align-items: center;
}

.event-details i {
    margin-right: 10px;
    width: 20px;
}

.bride-event .event-icon {
    background: rgba(255, 182, 193, 0.3);
}

.groom-event .event-icon {
    background: rgba(173, 216, 230, 0.3);
}

@media (max-width: 768px) {
    .events-timeline::before {
        left: 30px;
    }
    
    .event-item {
        flex-direction: row !important;
        padding-left: 60px;
    }
    
    .event-icon {
        position: absolute;
        left: 0;
        margin: 0;
    }
    
    .gallery-grid {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

</style>
</head>
<body>
    {% if invitation.background_music %}
    <audio id="backgroundMusic" preload="auto" loop>
        <source src="{{ url_for('static', filename='music/' + invitation.background_music) }}" type="audio/mpeg">
    </audio>
    {% else %}
    <audio id="backgroundMusic" preload="auto" loop>
        <source src="{{ url_for('static', filename='music/default_wedding.mp3') }}" type="audio/mpeg">
    </audio>
    {% endif %}

    <!-- Cover Page -->
    <div id="coverPage" class="cover-page">
        <div class="cover-content">
            <div class="couple-initials">
                <span>{{ invitation.bride_name[0] if invitation.bride_name else 'B' }}</span>
                <i class="fas fa-heart"></i>
