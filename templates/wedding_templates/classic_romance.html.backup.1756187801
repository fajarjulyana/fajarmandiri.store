<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ invitation.bride_name }} & {{ invitation.groom_name }} - Wedding Invitation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Lora:wght@400;500;600&family=Great+Vibes:wght@400&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-pink: #F8BBD9;
            --primary-gold: #FFD700;
            --secondary-cream: #FFF8E7;
            --accent-rose: #E91E63;
            --text-dark: #4A4A4A;
            --text-light: #8E8E8E;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Lora', serif;
            background: linear-gradient(135deg, var(--secondary-cream) 0%, #FFFFFF 100%);
            color: var(--text-dark);
        }

        .invitation-container {
            max-width: 500px;
            margin: 0 auto;
            background: white;
            min-height: 100vh;
            position: relative;
            box-shadow: 0 0 30px rgba(0,0,0,0.1);
        }

        /* Floral Border */
        .floral-border {
            position: absolute;
            top: 20px;
            left: 20px;
            right: 20px;
            bottom: 20px;
            border: 3px solid var(--primary-pink);
            border-radius: 15px;
            pointer-events: none;
            z-index: 1;
        }

        .floral-border::before {
            content: 'üå∏';
            position: absolute;
            top: -15px;
            left: 50%;
            transform: translateX(-50%);
            background: white;
            padding: 0 10px;
            font-size: 1.5rem;
        }

        .floral-border::after {
            content: 'üå∏';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            background: white;
            padding: 0 10px;
            font-size: 1.5rem;
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--primary-pink) 0%, var(--accent-rose) 100%);
            color: white;
            text-align: center;
            padding: 80px 40px;
            position: relative;
            z-index: 2;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Cpath d='M30 30c-5.5 0-10-4.5-10-10s4.5-10 10-10 10 4.5 10 10-4.5 10-10 10zm0-15c-2.8 0-5 2.2-5 5s2.2 5 5 5 5-2.2 5-5-2.2-5-5-5z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
        }

        .hero-ornament {
            color: var(--primary-gold);
            font-size: 3rem;
            margin-bottom: 25px;
            position: relative;
            z-index: 3;
        }

        .couple-names-hero {
            font-family: 'Great Vibes', cursive;
            font-size: 3.5rem;
            margin-bottom: 20px;
            position: relative;
            z-index: 3;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .wedding-date-hero {
            font-family: 'Playfair Display', serif;
            font-size: 1.3rem;
            opacity: 0.95;
            position: relative;
            z-index: 3;
        }

        /* Content Sections */
        .content-section {
            padding: 60px 40px;
            position: relative;
            z-index: 2;
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 40px;
            color: var(--text-dark);
            position: relative;
        }

        .section-title::after {
            content: '‚ùÄ';
            position: absolute;
            bottom: -20px;
            left: 50%;
            transform: translateX(-50%);
            color: var(--primary-pink);
            font-size: 1.5rem;
        }

        /* Opening Section */
        .opening-section {
            background: var(--secondary-cream);
            text-align: center;
        }

        .opening-text {
            line-height: 1.8;
            font-size: 1.1rem;
            color: var(--text-dark);
            margin-bottom: 30px;
        }

        .love-quote {
            background: white;
            padding: 30px;
            border-radius: 20px;
            border: 2px solid var(--primary-pink);
            font-style: italic;
            color: var(--text-dark);
            margin: 30px 0;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            position: relative;
        }

        .love-quote::before {
            content: '"';
            position: absolute;
            top: -10px;
            left: 20px;
            font-size: 3rem;
            color: var(--primary-pink);
            background: white;
            padding: 0 10px;
        }

        /* Couple Section */
        .couple-section {
            background: white;
        }

        .couple-card {
            background: var(--secondary-cream);
            border-radius: 25px;
            padding: 40px;
            text-align: center;
            margin-bottom: 30px;
            border: 2px solid var(--primary-pink);
            position: relative;
            overflow: hidden;
        }

        .couple-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, var(--primary-pink) 0%, transparent 70%);
            opacity: 0.1;
            z-index: 1;
        }

        .couple-content {
            position: relative;
            z-index: 2;
        }

        .couple-ornament {
            color: var(--accent-rose);
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .couple-name {
            font-family: 'Great Vibes', cursive;
            font-size: 2.5rem;
            color: var(--text-dark);
            margin-bottom: 15px;
        }

        .couple-parents {
            color: var(--text-light);
            line-height: 1.6;
            font-size: 1rem;
        }

        /* Heart Divider */
        .heart-divider {
            text-align: center;
            margin: 30px 0;
            font-size: 2rem;
            color: var(--accent-rose);
        }

        /* Event Section */
        .event-section {
            background: var(--secondary-cream);
        }

        .event-card {
            background: white;
            border-radius: 25px;
            padding: 40px;
            text-align: center;
            border: 2px solid var(--primary-pink);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .date-circle {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, var(--primary-pink), var(--accent-rose));
            border-radius: 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 0 auto 30px;
            color: white;
            box-shadow: 0 5px 15px rgba(233, 30, 99, 0.3);
        }

        .date-number {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1;
        }

        .date-month {
            font-size: 0.9rem;
            margin-top: 5px;
        }

        .venue-name {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 15px;
        }

        .venue-address {
            color: var(--text-light);
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .venue-time {
            color: var(--text-light);
            font-size: 1rem;
            margin-bottom: 25px;
        }

        .maps-btn {
            background: var(--accent-rose);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 500;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }

        .maps-btn:hover {
            background: #AD1457;
            color: white;
            transform: translateY(-2px);
        }

        /* RSVP Section */
        .rsvp-section {
            background: white;
        }

        .rsvp-form {
            max-width: 400px;
            margin: 0 auto;
        }

        .form-control {
            border: 2px solid var(--primary-pink);
            border-radius: 15px;
            padding: 15px 20px;
            margin-bottom: 20px;
            background: var(--secondary-cream);
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--accent-rose);
            background: white;
            box-shadow: 0 0 0 3px rgba(233, 30, 99, 0.1);
        }

        .btn-rsvp {
            background: var(--accent-rose);
            border: none;
            color: white;
            padding: 15px 40px;
            border-radius: 25px;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
        }

        .btn-rsvp:hover {
            background: #AD1457;
            transform: translateY(-2px);
        }

        /* Footer */
        .footer-section {
            background: linear-gradient(135deg, var(--primary-pink), var(--accent-rose));
            color: white;
            text-align: center;
            padding: 50px 40px;
            position: relative;
            z-index: 2;
        }

        .footer-hearts {
            color: var(--primary-gold);
            font-size: 2.5rem;
            margin-bottom: 25px;
        }

        /* Animations */
        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s ease;
        }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Gallery Styles */
        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin-top: 30px;
        }

        .gallery-item {
            aspect-ratio: 1;
            border-radius: 15px;
            overflow: hidden;
            position: relative;
            cursor: pointer;
            transition: transform 0.3s ease;
            border: 2px solid var(--primary-pink);
        }

        .gallery-item:hover {
            transform: scale(1.05);
        }

        .gallery-item:hover .gallery-overlay {
            opacity: 1;
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .gallery-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(233, 30, 99, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
            color: white;
            font-size: 1.5rem;
        }

        /* Floating Music Button */
        .floating-music {
            position: fixed;
            bottom: 20px;
            right: 20px;
            width: 60px;
            height: 60px;
            background: var(--accent-rose);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(233, 30, 99, 0.4);
            z-index: 1000;
            transition: all 0.3s ease;
        }

        .floating-music:hover {
            transform: scale(1.1);
            background: var(--primary-pink);
        }

        .floating-music.playing {
            animation: rotate 2s linear infinite;
        }

        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .couple-names-hero {
                font-size: 2.8rem;
            }

            .section-title {
                font-size: 1.8rem;
            }

            .couple-name {
                font-size: 2rem;
            }

            .content-section {
                padding: 50px 30px;
            }

            .couple-card, .event-card {
                padding: 30px 20px;
            }

            .gallery-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
</head>
<body>
    <div class="invitation-container">
        <div class="floral-border"></div>

        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-ornament">
                <i class="fas fa-heart"></i>
            </div>
            <h1 class="couple-names-hero">{{ invitation.couple_name }}</h1>
            <div class="wedding-date-hero">
                {% if invitation.wedding_date %}
                    {{ invitation.wedding_date.strftime('%d %B %Y') }}
                {% endif %}
            </div>
        </section>

        <!-- Opening Section -->
        <section class="content-section opening-section fade-in">
            <h2 class="section-title">Undangan Pernikahan</h2>
            <p class="opening-text">
                Dengan penuh kebahagiaan dan rasa syukur, kami mengundang Anda untuk hadir dan berbagi kegembiraan di hari istimewa kami.
            </p>

            <div class="love-quote">
                <p>Cinta sejati bukanlah tentang menemukan seseorang yang sempurna, tetapi tentang melihat orang yang tidak sempurna secara sempurna.</p>
            </div>
        </section>

        <!-- Couple Section -->
        <section class="content-section couple-section fade-in">
            <h2 class="section-title">Mempelai</h2>

            <div class="couple-card">
                <div class="couple-content">
                    <div class="couple-ornament">
                        <i class="fas fa-female"></i>
                    </div>
                    <h3 class="couple-name">{{ invitation.bride_name }}</h3>
                    <div class="couple-parents">
                        Putri dari<br>
                        <strong>{{ invitation.bride_father }}</strong><br>
                        &<br>
                        <strong>{{ invitation.bride_mother }}</strong>
                    </div>
                </div>
            </div>

            <div class="heart-divider">
                <i class="fas fa-heart"></i>
            </div>

            <div class="couple-card">
                <div class="couple-content">
                    <div class="couple-ornament">
                        <i class="fas fa-male"></i>
                    </div>
                    <h3 class="couple-name">{{ invitation.groom_name }}</h3>
                    <div class="couple-parents">
                        Putra dari<br>
                        <strong>{{ invitation.groom_father }}</strong><br>
                        &<br>
                        <strong>{{ invitation.groom_mother }}</strong>
                    </div>
                </div>
            </div>
        </section>

        <!-- Event Section -->
        <section class="content-section event-section fade-in">
            <h2 class="section-title">Waktu & Tempat</h2>

            <div class="event-card">
                {% if invitation.wedding_date %}
                <div class="date-circle">
                    <div class="date-number">{{ invitation.wedding_date.strftime('%d') }}</div>
                    <div class="date-month">{{ invitation.wedding_date.strftime('%b %Y') }}</div>
                </div>
                {% endif %}

                {% if invitation.venue_name %}
                    <h3 class="venue-name">{{ invitation.venue_name }}</h3>
                {% endif %}
                <p class="venue-address">{{ invitation.venue_address }}</p>
                {% if invitation.wedding_time %}
                    <p class="venue-time">
                        <i class="far fa-clock me-2"></i>
                        Pukul {{ invitation.wedding_time }} WIB
                    </p>
                {% endif %}
                <a href="https://maps.google.com/?q={{ invitation.venue_address }}" target="_blank" class="maps-btn">
                    <i class="fas fa-map-marker-alt me-2"></i>Lihat Lokasi
                </a>
            </div>
        </section>

        <!-- RSVP Section -->
        <section class="content-section rsvp-section fade-in">
            <h2 class="section-title">Konfirmasi Kehadiran</h2>
            <form method="POST" action="{{ url_for('rsvp_wedding', invitation_id=invitation.id) }}" class="rsvp-form">
                <input type="text" class="form-control" name="name" placeholder="Nama Lengkap" required>
                <input type="tel" class="form-control" name="phone" placeholder="Nomor WhatsApp">
                <select class="form-control" name="attendance" required>
                    <option value="">Konfirmasi Kehadiran</option>
                    <option value="hadir">Ya, Saya Akan Hadir</option>
                    <option value="tidak_hadir">Maaf, Saya Tidak Dapat Hadir</option>
                </select>
                <input type="number" class="form-control" name="guest_count" placeholder="Jumlah Tamu" min="1" max="5" value="1">
                <textarea class="form-control" name="wishes" rows="4" placeholder="Ucapan & Doa untuk Mempelai"></textarea>
                <button type="submit" class="btn btn-rsvp">
                    <i class="fas fa-paper-plane me-2"></i>Kirim Konfirmasi
                </button>
            </form>
        </section>

        <!-- Gallery Section -->
        {% if prewedding_photos %}
        <section class="content-section gallery-section fade-in" style="background: var(--secondary-cream);">
            <h2 class="section-title">Gallery Pre-Wedding</h2>
            <div class="gallery-grid">
                {% for photo in prewedding_photos %}
                <div class="gallery-item" onclick="openPhotoModal('{{ url_for('static', filename='prewedding_photos/' + photo) }}')">
                    <img src="{{ url_for('static', filename='prewedding_photos/' + photo) }}" alt="Pre-wedding Photo" loading="lazy">
                    <div class="gallery-overlay">
                        <i class="fas fa-expand"></i>
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>

        <!-- Photo Modal -->
        <div class="modal fade" id="photoModal" tabindex="-1">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content" style="background: transparent; border: none;">
                    <div class="modal-body p-0">
                        <button type="button" class="btn-close position-absolute top-0 end-0 m-3" 
                                data-bs-dismiss="modal" style="z-index: 1050; filter: invert(1);"></button>
                        <img id="modalImage" src="" alt="Gallery Photo" class="w-100 rounded">
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Footer -->
        <section class="footer-section">
            <div class="footer-hearts">
                <i class="fas fa-heart"></i>
            </div>
            <p style="line-height: 1.8; opacity: 0.95;">
                Terima kasih atas doa dan kehadiran Anda yang akan menjadikan hari bahagia kami semakin berkesan.
                <br><br>
                <strong>{{ invitation.couple_name }}</strong>
            </p>
        </section>
    </div>

    <!-- Floating Music Button -->
    <div class="floating-music" id="musicToggle">
        <i class="fas fa-music" id="musicIcon"></i>
    </div>

    <!-- Audio Player -->
    <audio id="backgroundMusic" loop preload="auto">
        {% if invitation.background_music %}
            <source src="{{ url_for('static', filename='music/' + invitation.background_music) }}" type="audio/mpeg">
        {% else %}
            <source src="{{ url_for('static', filename='music/default_wedding.mp3') }}" type="audio/mpeg">
        {% endif %}
        <source src="{{ url_for('static', filename='music/default_wedding.mp3') }}" type="audio/mpeg">
    </audio>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Intersection Observer for animations
        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Music functionality
        let isPlaying = false;
        const audio = document.getElementById('backgroundMusic');
        const musicToggle = document.getElementById('musicToggle');
        const musicIcon = document.getElementById('musicIcon');

        if (audio && musicToggle) {
            audio.volume = 0.3;

            // Try autoplay on load
            audio.play().then(() => {
                isPlaying = true;
                musicIcon.className = 'fas fa-pause';
                musicToggle.classList.add('playing');
                console.log('Music autoplaying');
            }).catch(() => {
                console.log('Autoplay blocked, waiting for user interaction');
            });

            musicToggle.addEventListener('click', function() {
                if (isPlaying) {
                    audio.pause();
                    musicIcon.className = 'fas fa-music';
                    musicToggle.classList.remove('playing');
                } else {
                    audio.play().catch(console.error);
                    musicIcon.className = 'fas fa-pause';
                    musicToggle.classList.add('playing');
                }
                isPlaying = !isPlaying;
            });

            // Auto-play attempt after any user interaction
            const startMusic = () => {
                if (!isPlaying && audio.src) {
                    audio.play().then(() => {
                        isPlaying = true;
                        musicIcon.className = 'fas fa-pause';
                        musicToggle.classList.add('playing');
                        console.log('Music started after user interaction');
                    }).catch(console.error);
                }
            };

            // Try on multiple interaction types
            document.addEventListener('click', startMusic, { once: true });
            document.addEventListener('touchstart', startMusic, { once: true });
            document.addEventListener('scroll', startMusic, { once: true });

            // Handle audio events
            audio.addEventListener('play', () => {
                isPlaying = true;
                musicIcon.className = 'fas fa-pause';
                musicToggle.classList.add('playing');
            });

            audio.addEventListener('pause', () => {
                isPlaying = false;
                musicIcon.className = 'fas fa-music';
                musicToggle.classList.remove('playing');
            });

            audio.addEventListener('loadeddata', function() {
                console.log('Audio loaded successfully');
                if (!isPlaying) {
                    audio.play().catch(() => {});
                }
            });
        }

        // Photo modal functionality
        function openPhotoModal(imageSrc) {
            const modal = new bootstrap.Modal(document.getElementById('photoModal'));
            document.getElementById('modalImage').src = imageSrc;
            modal.show();
        }
    </script>
</body>
</html>