<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ invitation.bride_name }} & {{ invitation.groom_name }} - Wedding Invitation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-gold: #D4AF37;
            --primary-dark: #1A1A1A;
            --secondary-cream: #F8F6F0;
            --accent-gold: #FFD700;
            --text-dark: #2C2C2C;
            --text-light: #666666;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #F8F6F0 0%, #FFFFFF 100%);
            overflow-x: hidden;
        }

        /* Loading Screen */
        .loading-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--primary-dark);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        .loading-content {
            text-align: center;
            color: var(--primary-gold);
        }

        .loading-hearts {
            font-size: 3rem;
            animation: pulse 1.5s infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.1); opacity: 0.8; }
        }

        /* Main Container */
        .invitation-container {
            max-width: 500px;
            margin: 0 auto;
            background: white;
            min-height: 100vh;
            box-shadow: 0 0 30px rgba(0,0,0,0.1);
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--primary-dark) 0%, #2C2C2C 100%);
            color: white;
            text-align: center;
            padding: 80px 30px;
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23D4AF37' fill-opacity='0.1'%3E%3Cpath d='M30 30m-2 0a2 2 0 1 1 4 0a2 2 0 1 1-4 0'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
        }

        .hero-ornament {
            color: var(--primary-gold);
            font-size: 3rem;
            margin-bottom: 30px;
            position: relative;
            z-index: 2;
        }

        .couple-names-hero {
            font-family: 'Playfair Display', serif;
            font-size: 3.2rem;
            font-weight: 700;
            margin-bottom: 20px;
            position: relative;
            z-index: 2;
            background: linear-gradient(45deg, #FFFFFF, var(--primary-gold), #FFFFFF);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .wedding-date-hero {
            font-family: 'Dancing Script', cursive;
            font-size: 1.6rem;
            opacity: 0.9;
            position: relative;
            z-index: 2;
        }

        /* Opening Section */
        .opening-section {
            padding: 60px 30px;
            text-align: center;
            background: white;
        }

        .bismillah {
            font-family: 'Dancing Script', cursive;
            font-size: 2.2rem;
            color: var(--primary-gold);
            margin-bottom: 40px;
        }

        .opening-text {
            color: var(--text-dark);
            line-height: 1.8;
            margin-bottom: 30px;
            font-size: 1.1rem;
        }

        .quran-verse {
            background: var(--secondary-cream);
            padding: 30px;
            border-radius: 20px;
            border-left: 5px solid var(--primary-gold);
            font-style: italic;
            color: var(--text-dark);
            margin: 40px 0;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        /* Section Styling */
        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            color: var(--primary-dark);
            text-align: center;
            margin-bottom: 50px;
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(90deg, transparent, var(--primary-gold), transparent);
            border-radius: 2px;
        }

        /* Couple Section */
        .couple-section {
            padding: 80px 30px;
            background: var(--secondary-cream);
        }

        .couple-card {
            background: white;
            border-radius: 25px;
            padding: 40px;
            text-align: center;
            margin-bottom: 40px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            border: 2px solid #F0F0F0;
            position: relative;
            overflow: hidden;
        }

        .couple-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, var(--primary-gold) 0%, transparent 70%);
            opacity: 0.05;
            z-index: 1;
        }

        .couple-content {
            position: relative;
            z-index: 2;
        }

        .couple-ornament {
            color: var(--primary-gold);
            font-size: 2.5rem;
            margin-bottom: 25px;
        }

        .couple-name {
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
            color: var(--primary-dark);
            margin-bottom: 15px;
            font-weight: 600;
        }

        .couple-parents {
            color: var(--text-dark);
            line-height: 1.6;
            font-size: 1rem;
        }

        /* Date & Venue Section */
        .venue-section {
            padding: 80px 30px;
            background: white;
        }

        .date-card {
            background: linear-gradient(135deg, var(--primary-gold), var(--accent-gold));
            color: white;
            border-radius: 25px;
            padding: 40px;
            text-align: center;
            margin-bottom: 40px;
            box-shadow: 0 15px 35px rgba(212, 175, 55, 0.3);
        }

        .date-number {
            font-family: 'Playfair Display', serif;
            font-size: 4rem;
            font-weight: 700;
            line-height: 1;
        }

        .date-month {
            font-size: 1.4rem;
            font-weight: 500;
            margin-top: 10px;
        }

        .venue-card {
            background: var(--secondary-cream);
            border-radius: 25px;
            padding: 40px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        }

        .venue-icon {
            color: var(--primary-gold);
            font-size: 3rem;
            margin-bottom: 25px;
        }

        .venue-name {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            color: var(--primary-dark);
            margin-bottom: 20px;
            font-weight: 600;
        }

        .venue-address {
            color: var(--text-dark);
            line-height: 1.6;
            margin-bottom: 25px;
            font-size: 1.1rem;
        }

        .venue-time {
            color: var(--text-light);
            font-size: 1rem;
            margin-bottom: 30px;
        }

        .maps-btn {
            background: var(--primary-gold);
            color: white;
            border: none;
            padding: 15px 35px;
            border-radius: 30px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(212, 175, 55, 0.3);
        }

        .maps-btn:hover {
            background: #B8941F;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
        }

        /* RSVP Section */
        .rsvp-section {
            padding: 80px 30px;
            background: linear-gradient(135deg, var(--primary-dark), #2C2C2C);
            color: white;
        }

        .rsvp-form {
            max-width: 400px;
            margin: 0 auto;
        }

        .form-control {
            border: none;
            border-radius: 15px;
            padding: 18px 25px;
            background: rgba(255,255,255,0.1);
            color: white;
            border: 2px solid rgba(255,255,255,0.2);
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }

        .form-control:focus {
            background: rgba(255,255,255,0.15);
            border-color: var(--primary-gold);
            box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.2);
            color: white;
        }

        .form-control::placeholder {
            color: rgba(255,255,255,0.7);
        }

        .btn-rsvp {
            background: var(--primary-gold);
            border: none;
            color: white;
            padding: 18px 40px;
            border-radius: 30px;
            font-weight: 600;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(212, 175, 55, 0.3);
        }

        .btn-rsvp:hover {
            background: #B8941F;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(212, 175, 55, 0.4);
        }

        /* Gallery Section */
        .gallery-section {
            padding: 80px 30px;
            background: var(--secondary-cream);
        }

        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 15px;
        }

        .gallery-item {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

        .gallery-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.4);
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 2rem;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .gallery-item:hover .gallery-overlay {
            opacity: 1;
        }

        .modal-backdrop {
            background-color: rgba(0,0,0,0.75) !important;
        }

        /* Footer */
        .footer-section {
            padding: 60px 30px;
            background: var(--primary-dark);
            color: white;
            text-align: center;
        }

        .footer-hearts {
            color: var(--primary-gold);
            font-size: 2.5rem;
            margin-bottom: 30px;
        }

        /* Floating Music */
        .floating-music {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 60px;
            height: 60px;
            background: var(--primary-gold);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            box-shadow: 0 5px 20px rgba(212, 175, 55, 0.4);
            z-index: 1000;
            transition: all 0.3s ease;
        }

        .floating-music:hover {
            transform: scale(1.1);
        }

        .floating-music.playing {
            animation: rotate 2s linear infinite;
        }

        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* Animations */
        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.8s ease;
        }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .couple-names-hero {
                font-size: 2.5rem;
            }

            .section-title {
                font-size: 2rem;
            }

            .couple-name {
                font-size: 1.8rem;
            }

            .date-number {
                font-size: 3rem;
            }

            .hero-section {
                padding: 60px 20px;
            }

            .couple-card, .venue-card {
                padding: 30px 20px;
            }

            .gallery-grid {
                grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
            }
        }
    </style>
</head>
<body>
    <!-- Loading Screen -->
    <div class="loading-screen" id="loadingScreen">
        <div class="loading-content">
            <div class="loading-hearts">
                <i class="fas fa-heart"></i>
            </div>
            <p style="margin-top: 20px; font-size: 1.2rem;">Memuat Undangan...</p>
        </div>
    </div>

    <!-- Main Container -->
    <div class="invitation-container" id="mainContent" style="display: none;">

        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-ornament">
                <i class="fas fa-gem"></i>
            </div>
            <h1 class="couple-names-hero">{{ invitation.couple_name }}</h1>
            <div class="wedding-date-hero">
                {% if invitation.wedding_date %}
                    {{ invitation.wedding_date.strftime('%d %B %Y') }}
                {% endif %}
            </div>
        </section>

        <!-- Opening Section -->
        <section class="opening-section fade-in">
            <div class="bismillah">بِسْمِ اللَّهِ الرَّحْمَنِ الرَّحِيْمِ</div>
            <p class="opening-text">
                Assalamu'alaikum Warahmatullahi Wabarakatuh
                <br><br>
                Dengan memohon rahmat dan ridho Allah SWT, kami bermaksud menyelenggarakan resepsi pernikahan putra-putri kami
            </p>

            <div class="quran-verse">
                <p>"Dan di antara tanda-tanda (kebesaran)-Nya ialah Dia menciptakan pasangan-pasangan untukmu dari jenismu sendiri, agar kamu cenderung dan merasa tenteram kepadanya."</p>
                <small><strong>QS. Ar-Rum: 21</strong></small>
            </div>
        </section>

        <!-- Couple Section -->
        <section class="couple-section fade-in">
            <h2 class="section-title">Mempelai</h2>

            <div class="couple-card">
                <div class="couple-content">
                    <div class="couple-ornament">
                        <i class="fas fa-female"></i>
                    </div>
                    <h3 class="couple-name">{{ invitation.bride_name }}</h3>
                    <div class="couple-parents">
                        Putri dari<br>
                        <strong>{{ invitation.bride_father }}</strong><br>
                        &<br>
                        <strong>{{ invitation.bride_mother }}</strong>
                    </div>
                </div>
            </div>

            <div class="text-center my-4">
                <div style="font-size: 2.5rem; color: var(--primary-gold);">
                    <i class="fas fa-heart"></i>
                </div>
            </div>

            <div class="couple-card">
                <div class="couple-content">
                    <div class="couple-ornament">
                        <i class="fas fa-male"></i>
                    </div>
                    <h3 class="couple-name">{{ invitation.groom_name }}</h3>
                    <div class="couple-parents">
                        Putra dari<br>
                        <strong>{{ invitation.groom_father }}</strong><br>
                        &<br>
                        <strong>{{ invitation.groom_mother }}</strong>
                    </div>
                </div>
            </div>
        </section>

        <!-- Date & Venue Section -->
        <section class="venue-section fade-in">
            <h2 class="section-title">Waktu & Tempat</h2>

            {% if invitation.wedding_date %}
            <div class="date-card">
                <div class="date-number">{{ invitation.wedding_date.strftime('%d') }}</div>
                <div class="date-month">{{ invitation.wedding_date.strftime('%B %Y') }}</div>
            </div>
            {% endif %}

            <div class="venue-card">
                <div class="venue-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                {% if invitation.venue_name %}
                    <h3 class="venue-name">{{ invitation.venue_name }}</h3>
                {% endif %}
                <p class="venue-address">{{ invitation.venue_address }}</p>
                {% if invitation.wedding_time %}
                    <p class="venue-time">
                        <i class="far fa-clock me-2"></i>
                        Pukul {{ invitation.wedding_time }} WIB
                    </p>
                {% endif %}
                <a href="https://maps.google.com/?q={{ invitation.venue_address }}" target="_blank" class="maps-btn">
                    <i class="fas fa-map-marked-alt me-2"></i>Lihat Lokasi
                </a>
            </div>
        </section>

        <!-- Gallery Section -->
        {% if prewedding_photos and prewedding_photos|length > 0 %}
        <section class="gallery-section fade-in">
            <h2 class="section-title">Gallery</h2>
            <div class="gallery-grid">
                {% for photo in prewedding_photos %}
                <div class="gallery-item" onclick="openModal('{{ url_for('static', filename='prewedding_photos/' + photo) }}')">
                    <img src="{{ url_for('static', filename='prewedding_photos/' + photo) }}" alt="Prewedding Photo">
                    <div class="gallery-overlay">
                        <i class="fas fa-expand"></i>
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>

        <!-- Photo Modal -->
        <div class="modal fade" id="photoModal" tabindex="-1">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body p-0">
                        <button type="button" class="btn-close position-absolute top-0 end-0 m-3 z-index-1"
                                data-bs-dismiss="modal" style="z-index: 1050; filter: invert(1);"></button>
                        <img id="modalImage" src="" alt="Gallery Photo" class="w-100">
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- RSVP Section -->
        <section class="rsvp-section fade-in">
            <h2 class="section-title" style="color: white;">Konfirmasi Kehadiran</h2>
            <form method="POST" action="{{ url_for('rsvp_wedding', invitation_id=invitation.id) }}" class="rsvp-form">
                <input type="text" class="form-control" name="name" placeholder="Nama Lengkap" required>
                <input type="tel" class="form-control" name="phone" placeholder="Nomor WhatsApp">
                <select class="form-control" name="attendance" required>
                    <option value="">Konfirmasi Kehadiran</option>
                    <option value="hadir">Ya, Saya Akan Hadir</option>
                    <option value="tidak_hadir">Maaf, Saya Tidak Dapat Hadir</option>
                </select>
                <input type="number" class="form-control" name="guest_count" placeholder="Jumlah Tamu" min="1" max="5" value="1">
                <textarea class="form-control" name="wishes" rows="4" placeholder="Ucapan & Doa untuk Mempelai"></textarea>
                <button type="submit" class="btn btn-rsvp">
                    <i class="fas fa-paper-plane me-2"></i>Kirim Konfirmasi
                </button>
            </form>
        </section>

        <!-- Footer Section -->
        <section class="footer-section">
            <div class="footer-hearts">
                <i class="fas fa-heart"></i>
            </div>
            <p>
                Merupakan suatu kehormatan dan kebahagiaan bagi kami apabila Bapak/Ibu/Saudara/i berkenan hadir untuk memberikan doa restu kepada kedua mempelai.
                <br><br>
                Wassalamu'alaikum Warahmatullahi Wabarakatuh
                <br><br>
                <strong>{{ invitation.couple_name }}</strong>
            </p>
        </section>
    </div>

    <!-- Floating Music Button -->
    <div class="floating-music" id="musicToggle">
        <i class="fas fa-music" id="musicIcon"></i>
    </div>

    <!-- Audio Player -->
    <audio id="backgroundMusic" loop preload="auto">
        {% if invitation.background_music %}
            <source src="{{ url_for('static', filename='music/' + invitation.background_music) }}" type="audio/mpeg">
        {% else %}
            <source src="{{ url_for('static', filename='music/default_wedding.mp3') }}" type="audio/mpeg">
        {% endif %}
    </audio>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Loading screen
        window.addEventListener('load', function() {
            setTimeout(() => {
                document.getElementById('loadingScreen').style.opacity = '0';
                setTimeout(() => {
                    document.getElementById('loadingScreen').style.display = 'none';
                    document.getElementById('mainContent').style.display = 'block';

                    // Trigger animations
                    setTimeout(() => {
                        document.querySelectorAll('.fade-in').forEach(el => {
                            el.classList.add('visible');
                        });
                    }, 100);
                }, 500);
            }, 2000);
        });

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Music functionality
        let isPlaying = false;
        const audio = document.getElementById('backgroundMusic');
        const musicToggle = document.getElementById('musicToggle');
        const musicIcon = document.getElementById('musicIcon');

        if (audio && musicToggle) {
            musicToggle.addEventListener('click', function() {
                if (isPlaying) {
                    audio.pause();
                    musicIcon.className = 'fas fa-music';
                    musicToggle.classList.remove('playing');
                } else {
                    audio.play().catch(e => {
                        console.log("Audio error:", e);
                        // Coba dengan file default jika musik utama gagal
                        audio.src = "{{ url_for('static', filename='music/default_wedding.mp3') }}";
                        audio.play().catch(err => console.log("Default music also failed:", err));
                    });
                    musicIcon.className = 'fas fa-pause';
                    musicToggle.classList.add('playing');
                }
                isPlaying = !isPlaying;
            });
        }

        // Photo modal functionality
        function openModal(imageUrl) {
            const modalImage = document.getElementById('modalImage');
            modalImage.src = imageUrl;
            const photoModal = new bootstrap.Modal(document.getElementById('photoModal'));
            photoModal.show();
        }
    </script>
</body>
</html>